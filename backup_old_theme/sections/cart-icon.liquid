<a href="{{ routes.cart_url }}" class="cart-icon">
  {% if cart.item_count > 0 %}
    <sup>{{ cart.item_count }}</sup>
  {% endif %}

  {{ 'icon-cart.svg' | inline_asset_content }}
</a>

{% stylesheet %}
  .cart-icon {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
    display: inline-block;
  }
  .cart-icon sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  .cart-icon svg {
    width: 2rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Cart Icon",
  "settings": []
}
{% endschema %}

