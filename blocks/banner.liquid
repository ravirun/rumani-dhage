{% doc %}
  Renders a banner component to highlight important information or required actions.

  Supports multiple variants (info, success, warning, error) and can be dismissible.

  @example
  {% content_for 'block', type: 'banner', id: 'announcement-banner' %}
{% enddoc %}

<div {{ block.shopify_attributes }} class="block-banner">
  {% render 'component-feedback-banner',
    title: block.settings.title,
    text: block.settings.text,
    variant: block.settings.variant,
    icon: block.settings.icon,
    dismissible: block.settings.dismissible,
    class: block.settings.class
  %}
</div>

{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "info": "Optional banner title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Banner text",
      "default": "<p>Banner message</p>"
    },
    {
      "type": "select",
      "id": "variant",
      "label": "Banner style",
      "options": [
        {
          "value": "info",
          "label": "Info"
        },
        {
          "value": "success",
          "label": "Success"
        },
        {
          "value": "warning",
          "label": "Warning"
        },
        {
          "value": "error",
          "label": "Error"
        }
      ],
      "default": "info"
    },
    {
      "type": "text",
      "id": "icon",
      "label": "Icon name",
      "info": "Lucide icon name (optional, auto-selected based on variant)"
    },
    {
      "type": "checkbox",
      "id": "dismissible",
      "label": "Show dismiss button",
      "default": false
    },
    {
      "type": "text",
      "id": "class",
      "label": "Additional CSS classes"
    }
  ],
  "presets": [
    {
      "name": "Banner"
    }
  ]
}
{% endschema %}

