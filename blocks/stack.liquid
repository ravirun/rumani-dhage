{% doc %}
  Renders a stack layout component for organizing elements horizontally or vertically.

  Supports configurable direction, gap, alignment, and justification options.

  @example
  {% content_for 'block', type: 'stack', id: 'content-stack' %}
{% enddoc %}

<div {{ block.shopify_attributes }} class="block-stack">
  {%- liquid
    assign content = block.settings.content
    if content == blank
      assign content = '<p>Stack content</p>'
    endif
  -%}
  
  {%- render 'component-structure-stack',
    content: content,
    direction: block.settings.direction,
    gap: block.settings.gap,
    align: block.settings.align,
    justify: block.settings.justify,
    wrap: block.settings.wrap,
    class: block.settings.class
  -%}
</div>

{% schema %}
{
  "name": "Stack",
  "settings": [
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Stack content</p>"
    },
    {
      "type": "select",
      "id": "direction",
      "label": "Direction",
      "options": [
        {
          "value": "horizontal",
          "label": "Horizontal"
        },
        {
          "value": "vertical",
          "label": "Vertical"
        }
      ],
      "default": "vertical"
    },
    {
      "type": "select",
      "id": "gap",
      "label": "Gap",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "xs",
          "label": "Extra Small"
        },
        {
          "value": "sm",
          "label": "Small"
        },
        {
          "value": "md",
          "label": "Medium"
        },
        {
          "value": "lg",
          "label": "Large"
        },
        {
          "value": "xl",
          "label": "Extra Large"
        },
        {
          "value": "2xl",
          "label": "2X Large"
        }
      ],
      "default": "md"
    },
    {
      "type": "select",
      "id": "align",
      "label": "Alignment",
      "options": [
        {
          "value": "start",
          "label": "Start"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "End"
        },
        {
          "value": "stretch",
          "label": "Stretch"
        }
      ],
      "default": "start"
    },
    {
      "type": "select",
      "id": "justify",
      "label": "Justification",
      "options": [
        {
          "value": "start",
          "label": "Start"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "End"
        },
        {
          "value": "space-between",
          "label": "Space Between"
        },
        {
          "value": "space-around",
          "label": "Space Around"
        }
      ],
      "default": "start"
    },
    {
      "type": "checkbox",
      "id": "wrap",
      "label": "Allow wrapping",
      "default": false
    },
    {
      "type": "text",
      "id": "class",
      "label": "Additional CSS classes"
    }
  ],
  "presets": [
    {
      "name": "Stack"
    }
  ]
}
{% endschema %}

