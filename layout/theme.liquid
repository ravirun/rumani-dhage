<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% comment %}
      Font preloading:
      1. Preconnect to font CDN for faster connection
      2. Preload only the critical font variant (base weight)
      3. Additional variants load on-demand via @font-face
    {% endcomment %}
    {% unless settings.type_primary_font.system? %}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
      {% assign font_url_value = settings.type_primary_font | font_url %}
      {% if font_url_value != blank and font_url_value contains 'shopifycdn.com' %}
        {% comment %}theme-check-disable AssetPreload, RemoteAsset{% endcomment %}
        <link rel="preload" as="font" href="{{ font_url_value }}" type="font/woff2" crossorigin="anonymous">
        {% comment %}theme-check-enable AssetPreload, RemoteAsset{% endcomment %}
    {% endif %}
    {% endunless %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Load Design System Utilities %}
    {% render 'design-system-utils' %}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}

    {% # Ajax Cart API Scripts - ajax-cart.js uses async to load in parallel but execute when ready %}
    {% comment %}theme-check-disable ParserBlockingScript{% endcomment %}
    <script src="{{ 'ajax-cart.js' | asset_url }}" async></script>
    {% comment %}theme-check-enable ParserBlockingScript{% endcomment %}
    <script src="{{ 'search-autocomplete.js' | asset_url }}" defer></script>
    <script src="{{ 'product-recommendations.js' | asset_url }}" defer></script>
  </head>

  <body style="position: relative;">
    {% sections 'header-group' %}
      {{ content_for_layout }}
    {% sections 'footer-group' %}
    {% section 'floating-cart' %}
    {% section 'bottomNavigation' %}
    {% render 'ajax-cart-drawer' %}
    {% render 'search-autocomplete' %}
    {% render 'ajax-cart-notifications' %}
  </body>
</html>
