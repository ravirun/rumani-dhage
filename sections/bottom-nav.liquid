{% comment %}
  Bottom navigation bar for mobile devices
  Displays Home, Categories, New Arrivals, and Cart
{% endcomment %}

{%- liquid
  assign current_path = request.path
  assign is_home = false
  assign is_cart = false
  
  if current_path == '/' or current_path == ''
    assign is_home = true
  endif
  
  if current_path == routes.cart_url
    assign is_cart = true
  endif
-%}

<bottom-navigation class="bottom-nav" data-section-id="{{ section.id }}">
  <nav class="bottom-nav__container">
    <ul class="bottom-nav__list">
      <li class="bottom-nav__item">
        <a 
          href="{{ routes.root_url }}" 
          class="bottom-nav__link{% if is_home %} bottom-nav__link--active{% endif %}"
          aria-label="{{ 'general.navigation.home' | t }}"
        >
          {% render 'icon-home' %}
          <span class="bottom-nav__label">{{ 'general.navigation.home' | t }}</span>
        </a>
      </li>
      
      <li class="bottom-nav__item">
        <button 
          type="button" 
          class="bottom-nav__link"
          data-modal-trigger="categories-modal-{{ section.id }}"
          aria-label="{{ 'general.navigation.categories' | t }}"
        >
          <span class="svg-wrapper">{{ 'icon-filter.svg' | inline_asset_content }}</span>
          <span class="bottom-nav__label">{{ 'general.navigation.categories' | t }}</span>
        </button>
      </li>
      
      <li class="bottom-nav__item">
        <button 
          type="button" 
          class="bottom-nav__link"
          data-modal-trigger="new-arrivals-modal-{{ section.id }}"
          aria-label="{{ 'general.navigation.new_arrivals' | t }}"
        >
          <span class="svg-wrapper">{{ 'icon-star.svg' | inline_asset_content }}</span>
          <span class="bottom-nav__label">{{ 'general.navigation.new_arrivals' | t }}</span>
        </button>
      </li>
      
      <li class="bottom-nav__item">
        <a 
          href="{{ routes.cart_url }}" 
          class="bottom-nav__link{% if is_cart %} bottom-nav__link--active{% endif %}"
          id="bottom-nav-cart-{{ section.id }}"
          aria-label="{{ 'templates.cart.cart' | t }}"
        >
          {% if cart == empty %}
            <span class="svg-wrapper">{{ 'icon-cart-empty.svg' | inline_asset_content }}</span>
          {% else %}
            <span class="svg-wrapper">{{ 'icon-cart.svg' | inline_asset_content }}</span>
          {% endif %}
          <span class="bottom-nav__label">{{ 'templates.cart.cart' | t }}</span>
          {%- if cart != empty -%}
            <div class="bottom-nav__cart-count">
              {%- if cart.item_count < 100 -%}
                <span aria-hidden="true">{{ cart.item_count }}</span>
              {%- endif -%}
              <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
            </div>
          {%- endif -%}
        </a>
      </li>
    </ul>
  </nav>
</bottom-navigation>

{% comment %} Categories Modal {% endcomment %}
<slide-up-modal id="categories-modal-{{ section.id }}" class="slide-up-modal">
  <div class="slide-up-modal__overlay"></div>
  <div 
    class="slide-up-modal__content color-{{ section.settings.modal_color_scheme }}" 
    role="dialog" 
    aria-modal="true" 
    aria-label="{{ 'general.navigation.categories' | t }}"
  >
    <div class="slide-up-modal__header">
      <h2 class="slide-up-modal__title">{{ 'general.navigation.categories' | t }}</h2>
      <button 
        type="button" 
        class="slide-up-modal__close" 
        aria-label="{{ 'accessibility.close' | t }}"
        data-modal-close
      >
        <span class="svg-wrapper">{{ 'icon-close.svg' | inline_asset_content }}</span>
      </button>
    </div>
    <div class="slide-up-modal__body">
      {%- assign menu = linklists[section.settings.categories_menu] -%}
      {%- if menu and menu.links.size > 0 -%}
        <ul class="slide-up-modal__list">
          {%- for link in menu.links -%}
            <li class="slide-up-modal__list-item">
              <a href="{{ link.url }}" class="slide-up-modal__link">{{ link.title | escape }}</a>
            </li>
          {%- endfor -%}
        </ul>
      {%- else -%}
        <p class="slide-up-modal__empty">{{ 'general.navigation.no_categories' | t }}</p>
      {%- endif -%}
    </div>
  </div>
</slide-up-modal>

{% comment %} New Arrivals Modal {% endcomment %}
<slide-up-modal id="new-arrivals-modal-{{ section.id }}" class="slide-up-modal">
  <div class="slide-up-modal__overlay"></div>
  <div 
    class="slide-up-modal__content color-{{ section.settings.modal_color_scheme }}" 
    role="dialog" 
    aria-modal="true" 
    aria-label="{{ 'general.navigation.new_arrivals' | t }}"
  >
    <div class="slide-up-modal__header">
      <h2 class="slide-up-modal__title">{{ 'general.navigation.new_arrivals' | t }}</h2>
      <button 
        type="button" 
        class="slide-up-modal__close" 
        aria-label="{{ 'accessibility.close' | t }}"
        data-modal-close
      >
        <span class="svg-wrapper">{{ 'icon-close.svg' | inline_asset_content }}</span>
      </button>
    </div>
    <div class="slide-up-modal__body">
      {%- assign new_arrivals_collection = collections[section.settings.new_arrivals_collection] | default: collections.all -%}
      {%- if new_arrivals_collection.products.size > 0 -%}
        <div class="slide-up-modal__products">
          {%- for product in new_arrivals_collection.products limit: section.settings.products_limit -%}
            {% render 'card-product', 
              card_product: product, 
              show_vendor: section.settings.show_vendor,
              lazy_load: true 
            %}
          {%- endfor -%}
        </div>
      {%- else -%}
        <p class="slide-up-modal__empty">{{ 'general.navigation.no_new_arrivals' | t }}</p>
      {%- endif -%}
    </div>
  </div>
</slide-up-modal>

{% stylesheet %}
  .bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgb(var(--color-background));
    border-top: 0.1rem solid rgba(var(--color-foreground), 0.08);
    z-index: 100;
    padding: 0.8rem 0;
    display: none;
  }

  @media screen and (max-width: 749px) {
    .bottom-nav {
      display: block;
    }
  }

  .bottom-nav__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .bottom-nav__list {
    display: flex;
    justify-content: space-around;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 0.5rem;
  }

  .bottom-nav__item {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .bottom-nav__link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem;
    text-decoration: none;
    color: rgba(var(--color-foreground), 0.6);
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    transition: color 0.2s ease;
    position: relative;
    width: 100%;
  }

  .bottom-nav__link:hover,
  .bottom-nav__link:focus {
    color: rgba(var(--color-foreground), 0.8);
  }

  .bottom-nav__link--active {
    color: rgb(var(--color-button));
  }

  .bottom-nav__link .svg-wrapper {
    width: 2.4rem;
    height: 2.4rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bottom-nav__label {
    font-size: 1rem;
    line-height: 1.2;
  }

  .bottom-nav__cart-count {
    position: absolute;
    top: 0;
    right: 0.5rem;
    background-color: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    border-radius: 50%;
    width: 1.8rem;
    height: 1.8rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    font-weight: 500;
  }

  /* Slide Up Modal Styles */
  .slide-up-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .slide-up-modal[open] {
    z-index: 101;
    opacity: 1;
    visibility: visible;
  }

  .slide-up-modal__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(var(--color-foreground), 0.5);
  }

  .slide-up-modal__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgb(var(--color-background));
    border-top-left-radius: 2rem;
    border-top-right-radius: 2rem;
    max-height: 90vh;
    transform: translateY(100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    box-shadow: 0 -0.4rem 2rem rgba(var(--color-shadow), 0.15);
  }

  .slide-up-modal[open] .slide-up-modal__content {
    transform: translateY(0);
  }

  .slide-up-modal__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 2rem 1rem;
    border-bottom: 0.1rem solid rgba(var(--color-foreground), 0.08);
  }

  .slide-up-modal__title {
    margin: 0;
    font-size: 1.8rem;
    font-weight: 600;
  }

  .slide-up-modal__close {
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: rgba(var(--color-foreground), 0.75);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .slide-up-modal__close:hover {
    color: rgb(var(--color-foreground));
  }

  .slide-up-modal__close .svg-wrapper {
    width: 2.4rem;
    height: 2.4rem;
  }

  .slide-up-modal__body {
    flex: 1;
    overflow-y: auto;
    padding: 2rem;
  }

  .slide-up-modal__list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .slide-up-modal__list-item {
    border-bottom: 0.1rem solid rgba(var(--color-foreground), 0.08);
  }

  .slide-up-modal__list-item:last-child {
    border-bottom: none;
  }

  .slide-up-modal__link {
    display: block;
    padding: 1.5rem 0;
    text-decoration: none;
    color: rgb(var(--color-foreground));
    font-size: 1.6rem;
    transition: color 0.2s ease;
  }

  .slide-up-modal__link:hover {
    color: rgba(var(--color-foreground), 0.75);
  }

  .slide-up-modal__products {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .slide-up-modal__empty {
    text-align: center;
    padding: 4rem 2rem;
    color: rgba(var(--color-foreground), 0.6);
  }
{% endstylesheet %}

{% javascript %}
  class BottomNavigation extends HTMLElement {
    constructor() {
      super();
      this.initModals();
    }

    initModals() {
      const triggers = this.querySelectorAll('[data-modal-trigger]');
      triggers.forEach(trigger => {
        trigger.addEventListener('click', (e) => {
          e.preventDefault();
          const modalId = trigger.getAttribute('data-modal-trigger');
          const modal = document.getElementById(modalId);
          if (modal) {
            modal.show();
          }
        });
      });
    }
  }

  class SlideUpModal extends HTMLElement {
    constructor() {
      super();
      this.closeButton = this.querySelector('[data-modal-close]');
      this.overlay = this.querySelector('.slide-up-modal__overlay');
      this.init();
    }

    init() {
      if (this.closeButton) {
        this.closeButton.addEventListener('click', () => this.hide());
      }
      if (this.overlay) {
        this.overlay.addEventListener('click', () => this.hide());
      }
      this.addEventListener('keyup', (e) => {
        if (e.code === 'Escape') this.hide();
      });
    }

    show() {
      this.setAttribute('open', '');
      document.body.classList.add('overflow-hidden');
      if (typeof trapFocus === 'function') {
        trapFocus(this, this.querySelector('[role="dialog"]'));
      }
    }

    hide() {
      this.removeAttribute('open');
      document.body.classList.remove('overflow-hidden');
      if (typeof removeTrapFocus === 'function') {
        removeTrapFocus();
      }
    }
  }

  if (!customElements.get('bottom-navigation')) {
    customElements.define('bottom-navigation', BottomNavigation);
  }

  if (!customElements.get('slide-up-modal')) {
    customElements.define('slide-up-modal', SlideUpModal);
  }
{% endjavascript %}

{% schema %}
{
  "name": "t:sections.bottom-nav.name",
  "tag": "section",
  "class": "section-bottom-nav",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.bottom-nav.settings.header__categories.content"
    },
    {
      "type": "link_list",
      "id": "categories_menu",
      "label": "t:sections.bottom-nav.settings.categories_menu.label",
      "default": "main-menu",
      "info": "t:sections.bottom-nav.settings.categories_menu.info"
    },
    {
      "type": "header",
      "content": "t:sections.bottom-nav.settings.header__new_arrivals.content"
    },
    {
      "type": "collection",
      "id": "new_arrivals_collection",
      "label": "t:sections.bottom-nav.settings.new_arrivals_collection.label",
      "info": "t:sections.bottom-nav.settings.new_arrivals_collection.info"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "t:sections.bottom-nav.settings.products_limit.label",
      "min": 4,
      "max": 20,
      "step": 2,
      "default": 10
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "t:sections.bottom-nav.settings.show_vendor.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.bottom-nav.settings.header__appearance.content"
    },
    {
      "type": "color_scheme",
      "id": "modal_color_scheme",
      "label": "t:sections.bottom-nav.settings.modal_color_scheme.label",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "t:sections.bottom-nav.name"
    }
  ]
}
{% endschema %}
