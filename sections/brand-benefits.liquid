{% comment %}
  Brand Benefits Section

  Displays key brand differentiators and benefits in a grid layout
  with icons, headings, and descriptions.
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .brand-benefits-{{ section.id }} .section-heading {
    text-transform: uppercase;
    letter-spacing: 0.3rem;
    margin-bottom: 4rem;
    text-align: center;
    color: rgb(var(--color-foreground));
  }

  .brand-benefits-{{ section.id }} .benefits-row {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    gap: {{ section.settings.gap_mobile }}px;
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .brand-benefits-{{ section.id }} .benefits-row {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: {{ section.settings.gap_desktop }}px;
    }
  }

  .brand-benefits-{{ section.id }} .benefit-card {
    text-align: center;
    padding: 2rem 1.5rem;
  }

  .brand-benefits-{{ section.id }} .benefit-icon {
    font-size: {{ section.settings.icon_size }}px;
    margin-bottom: 1.5rem;
    color: rgba(var(--color-foreground), 0.7);
    display: block;
  }

  .brand-benefits-{{ section.id }} .benefit-title {
    font-size: {{ section.settings.title_size }}px;
    margin-bottom: 1rem;
    letter-spacing: 0.1rem;
    text-transform: uppercase;
    color: rgb(var(--color-foreground));
    font-family: var(--font-heading-family);
  }

  .brand-benefits-{{ section.id }} .benefit-description {
    font-size: {{ section.settings.description_size }}px;
    line-height: 1.6;
    color: rgba(var(--color-foreground), 0.8);
    font-family: var(--font-body-family);
  }
{%- endstyle -%}

<div class="brand-benefits-{{ section.id }} section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="section-heading h2">{{ section.settings.heading }}</h2>
    {%- endif -%}

    <div class="benefits-row">
      {%- for block in section.blocks -%}
        {%- if block.type == 'benefit' -%}
          <div class="benefit-card" {{ block.shopify_attributes }}>
            {%- if block.settings.icon != blank -%}
              <span class="benefit-icon">{{ block.settings.icon }}</span>
            {%- endif -%}
            {%- if block.settings.title != blank -%}
              <h3 class="benefit-title">{{ block.settings.title }}</h3>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <p class="benefit-description">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

