{% comment %}
  This section is used in the cart template to render /cart page with an
  overview of the items in customer's cart.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/cart
{% endcomment %}

<h1>{{ 'cart.title' | t }}</h1>

<form action="{{ routes.cart_url }}" method="post">
  <table>
    {% for item in cart.items %}
      <tr>
        <td>
          {% render 'image', image: item.image, url: item.url %}
        </td>
        <td>
          <p>{{ item.product.title }}</p>
          <a href="{{ item.url_to_remove }}" aria-label="Remove item">
            {% render 'lucide-icon', icon_name: 'trash-2', size: 16, class: 'cart-remove-icon' %}
            {{ 'cart.remove' | t }}
          </a>
        </td>
        <td>
          <input type="text" name="updates[]" value="{{ item.quantity }}">
          <button type="submit">
            {% render 'lucide-icon', icon_name: 'refresh-cw', size: 16, class: 'cart-update-icon' %}
            {{ 'cart.update' | t }}
          </button>
        </td>
      </tr>
    {% endfor %}
  </table>

  <button type="submit" name="checkout">
    {% render 'lucide-icon', icon_name: 'shopping-bag', size: 18, class: 'checkout-icon' %}
    {{ 'cart.checkout' | t }}
  </button>
</form>

{% stylesheet %}
  .cart-remove-icon,
  .cart-update-icon,
  .checkout-icon {
    display: inline-block;
    vertical-align: middle;
    margin-right: 0.5rem;
  }
  button[type="submit"] {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.cart",
  "settings": []
}
{% endschema %}
