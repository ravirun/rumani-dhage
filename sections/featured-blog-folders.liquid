{% comment %}
  Blog Folders Section
  Displays blog collections as interactive folder cards
{% endcomment %}

{% render 'blog-folder-styles', section: section %}

<div class="folder-section-{{ section.id }}">
  <div class="page-width">
    <div class="folder-section-header">
      {%- if section.settings.title != blank -%}
        <h2 class="{{ section.settings.heading_size }}">{{ section.settings.title }}</h2>
      {%- endif -%}
      {%- if section.settings.subtitle != blank -%}
        <div class="folder-section-subtitle rte">
          {{ section.settings.subtitle }}
        </div>
      {%- endif -%}
    </div>
    <div class="folders-grid-{{ section.id }}">
      {%- for block in section.blocks -%}
        {% render 'blog-folder-card', blog: block.settings.blog, block_attributes: block.shopify_attributes %}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Blog Folders",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Blog Folders"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "<p>Explore our curated collections of stories and adventures.</p>"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra Large"
        }
      ],
      "default": "h1",
      "label": "Heading Size"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 2,
      "label": "Columns on Desktop"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "2",
      "label": "Columns on Mobile"
    },

    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "photo_folder",
      "name": "Blog Folder",
      "settings": [
        {
          "type": "blog",
          "id": "blog",
          "label": "Blog Source",
          "info": "Select a blog to automatically populate content."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Blog Folders",
      "blocks": [{ "type": "photo_folder" }, { "type": "photo_folder" }]
    }
  ]
}
{% endschema %}
