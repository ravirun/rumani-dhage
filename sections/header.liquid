    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--color-foreground);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.2s ease;
  }

  .menu-drawer__close:hover,
  .menu-drawer__close:focus {
    opacity: 0.7;
    outline: none;
  }

  .menu-drawer__close i {
    width: 1.5rem;
    height: 1.5rem;
    stroke-width: 2;
  }

  .menu-drawer__nav {
    flex: 1;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    padding: 1rem 0;
  }

  .menu-drawer__list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu-drawer__item {
    border-bottom: 1px solid color-mix(in srgb, var(--color-foreground) 5%, transparent);
  }

  .menu-drawer__link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    text-decoration: none;
    color: var(--color-foreground);
    font-size: 1rem;
    font-weight: 500;
    transition: background 0.2s ease;
  }

  .menu-drawer__link:hover,
  .menu-drawer__link:focus {
    background: color-mix(in srgb, var(--color-foreground) 5%, transparent);
    outline: none;
  }

  .menu-drawer__chevron {
    width: 1rem;
    height: 1rem;
    color: color-mix(in srgb, var(--color-foreground) 50%, transparent);
    stroke-width: 2;
  }

  .menu-drawer__sublist {
    list-style: none;
    margin: 0;
    padding: 0;
    background: color-mix(in srgb, var(--color-foreground) 2%, transparent);
    display: none;
  }

  .menu-drawer__item.active .menu-drawer__sublist {
    display: block;
  }

  .menu-drawer__subitem {
    border-bottom: 1px solid color-mix(in srgb, var(--color-foreground) 3%, transparent);
  }

  .menu-drawer__sublink {
    display: block;
    padding: 0.75rem 1.5rem 0.75rem 3rem;
    text-decoration: none;
    color: color-mix(in srgb, var(--color-foreground) 80%, transparent);
    font-size: 0.9rem;
    transition: background 0.2s ease, color 0.2s ease;
  }

  .menu-drawer__sublink:hover,
  .menu-drawer__sublink:focus {
    background: color-mix(in srgb, var(--color-foreground) 5%, transparent);
    color: var(--color-foreground);
    outline: none;
  }

  .menu-drawer__empty {
    padding: 2rem 1.5rem;
    text-align: center;
    color: color-mix(in srgb, var(--color-foreground) 60%, transparent);
    font-size: 0.9rem;
  }

  /* Ensure menu items are visible */
  .menu-drawer__list {
    min-height: 100px;
  }

  .menu-drawer__item {
    min-height: 3rem;
  }

  /* Prevent body scroll when menu is open */
  body.menu-open {
    overflow: hidden;
  }
