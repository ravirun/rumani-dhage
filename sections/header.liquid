  {%- comment -%} Desktop Header Layout {%- endcomment -%}
  .header--desktop-simple {
    width: 100%;
  }

  .header__top-row {
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    gap: 2rem;
    width: 100%;
  }

  .header__left {
    display: flex;
    align-items: center;
  }

  .header__center {
    display: flex;
    justify-content: center;
    width: 100%;
  }

  .header__center .search-form {
    width: 100%;
    max-width: 600px;
  }

  .header__center .search {
    position: relative;
    width: 100%;
  }

  .header__center .field {
    position: relative;
  }

  .header__center .search__input {
    padding-right: 4rem;
    width: 100%;
  }

  .header__right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .header__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
  }

  .header__mobile-search {
    display: none;
  }
  .list-menu {
    list-style: none;
    width: fit-content;
    padding: 0;
  }

  {%- comment -%} Mobile Header Layout {%- endcomment -%}
  @media screen and (max-width: 989px) {
    .header--desktop-simple {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      width: 100%;
    }

    .header__top-row {
      display: grid;
      grid-template-columns: auto 1fr;
      align-items: center;
      width: 100%;
      gap: 1rem;
    }

    .header__left {
      display: flex;
      align-items: center;
    }

    .header__right {
      display: flex;
      align-items: center;
      justify-content: flex-end;
      gap: 1rem;
    }

    .header__center {
      display: none;
    }

    .header__mobile-search {
      display: block;
      width: 100%;
    }

    .header__mobile-search .search-form {
      width: 100%;
    }

    .header__mobile-search .search {
      position: relative;
      width: 100%;
    }

    .header__mobile-search .field {
      position: relative;
    }

    .header__mobile-search .search__input {
      padding-right: 4rem;
      width: 100%;
    }
  }
</style>

