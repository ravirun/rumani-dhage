{% javascript %}
  (function() {
    // Initialize Lucide icons
    function initIcons() {
      if (typeof lucide !== 'undefined') {
        lucide.createIcons();
      }
    }

    // Wait for Lucide to load
    if (typeof lucide !== 'undefined') {
      initIcons();
    } else {
      document.addEventListener('DOMContentLoaded', function() {
        initIcons();
      });
    }

    const menuToggle = document.querySelector('[data-menu-toggle]');
    const menuDrawer = document.getElementById('menu-drawer');
    const menuCloseButtons = document.querySelectorAll('[data-menu-close]');
    const body = document.body;
    const menuItems = document.querySelectorAll('.menu-drawer__item');

    if (!menuToggle || !menuDrawer) return;

    // Open menu
    function openMenu() {
      body.classList.add('menu-open');
      menuDrawer.classList.add('active');
      
      // Prevent scroll on body
      const scrollY = window.scrollY;
      body.style.position = 'fixed';
      body.style.top = `-${scrollY}px`;
      body.style.width = '100%';
      
      // Re-initialize icons
      initIcons();
    }

    // Close menu
    function closeMenu() {
      const scrollY = body.style.top;
      body.classList.remove('menu-open');
      body.style.position = '';
      body.style.top = '';
      body.style.width = '';
      
      if (scrollY) {
        window.scrollTo(0, parseInt(scrollY || '0') * -1);
      }
      
      menuDrawer.classList.remove('active');
      
      // Close any open submenus
      menuItems.forEach(item => {
        item.classList.remove('active');
      });
    }

    // Toggle menu on button click
    menuToggle.addEventListener('click', function(e) {
      e.preventDefault();
      if (menuDrawer.classList.contains('active')) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    // Close menu on close button or overlay click
    menuCloseButtons.forEach(button => {
      button.addEventListener('click', function() {
        closeMenu();
      });
    });

    // Toggle submenu on parent item click
    menuItems.forEach(item => {
      const link = item.querySelector('.menu-drawer__link');
      const sublist = item.querySelector('.menu-drawer__sublist');
      
      if (sublist) {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          item.classList.toggle('active');
          initIcons();
        });
      }
    });

    // Close on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && menuDrawer.classList.contains('active')) {
        closeMenu();
      }
    });
  })();
{% endjavascript %}

