{{ 'component-instagram-story.css' | asset_url | stylesheet_tag }}
<script src="{{ 'instagram-stories.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  :root {
    --rd-story-size: {{ section.settings.circle_size_desktop }}px;
    --rd-story-size-mobile: {{ section.settings.circle_size_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="">
  <div class="section-{{ section.id }}-padding page-width" style="margin-top: 2rem; margin-bottom: 2rem;">
    {%- if section.settings.heading != blank -%}
      <div class="instagram-story__header text-{{ section.settings.heading_alignment }}">
        <h2 style="text-align:center;" class=" h2">
          {{ section.settings.heading }}
        </h2>
      </div>
    {%- endif -%}

    <div class="instagram-story">
      <div class="instagram-story__container-wrapper">
        <div class="instagram-story__container" aria-label="Instagram stories">
          {%- if section.blocks.size > 0 -%}
            {%- for block in section.blocks -%}
              {%- render 'insta-story-circle', block: block -%}
            {%- endfor -%}
          {%- else -%}
            {%- for i in (1..4) -%}
              <div class="instagram-story__item">
                <div class="insta-story-outer-circle">
                  <div class="insta-story-inner-circle">
                    {{ 'product-apparel-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                </div>
              </div>
            {%- endfor -%}
          {%- endif -%}
        </div>

        {%- if section.settings.view_all_link != blank -%}
          <div class="instagram-story__view-all">
            <a href="{{ section.settings.view_all_link }}" class="instagram-story__view-all-link">
              <span>View All</span>
              <span class="icon-arrow">{% render 'icon-arrow' %}</span>
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{%- if section.blocks.size > 0 -%}
  {%- render 'insta-story-full-view', blocks: section.blocks -%}
{%- endif -%}

{% schema %}
{
  "name": "Instagram Story",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Shop Our Latest Looks"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Link"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "circle_size_desktop",
      "min": 60,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "Circle Size (Desktop)",
      "default": 84
    },
    {
      "type": "range",
      "id": "circle_size_mobile",
      "min": 40,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Circle Size (Mobile)",
      "default": 64
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "instastory",
      "name": "Story Item",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "New Arrival"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Cover Image",
          "info": "Used for the circle trigger"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Tagged Product"
        },
        {
          "type": "image_picker",
          "id": "story_image",
          "label": "Story Content Image",
          "info": "Displayed in the full-screen viewer"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Story Content Video",
          "info": "Optional: Replaces image in viewer"
        },
        {
          "type": "text",
          "id": "fabric",
          "label": "Fabric / Highlights",
          "info": "Display in Quick Buy panel"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Story",
      "blocks": [{ "type": "instastory" }, { "type": "instastory" }, { "type": "instastory" }, { "type": "instastory" }]
    }
  ]
}
{% endschema %}
