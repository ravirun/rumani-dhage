{%- comment -%}
  This section is used in the password template to render landing page shown
  when password protection is applied to a store.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/password
{%- endcomment -%}

<section class="password-page" id="shopify-section-{{ section.id }}">
  <div class="password-page__container">
    <div class="password-page__content">
      {%- if section.settings.show_logo and shop.brand.logo -%}
        <div class="password-page__logo">
          {%- render 'image',
            image: shop.brand.logo,
            alt: shop.name,
            width: section.settings.logo_width,
            height: section.settings.logo_width | divided_by: shop.brand.logo.aspect_ratio | round
          -%}
        </div>
      {%- endif -%}

      <div class="password-page__header">
        <h1 class="password-page__title">
          {{- section.settings.heading | default: 'password.title' | t -}}
        </h1>
        
        {%- if shop.password_message != blank -%}
          <p class="password-page__message">{{ shop.password_message }}</p>
        {%- elsif section.settings.description != blank -%}
          <p class="password-page__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>

      <div class="password-page__form-wrapper">
        {%- form 'storefront_password', class: 'password-page__form' -%}
          {%- if form.errors -%}
            <div class="password-page__errors" role="alert">
              {{- form.errors | default_errors -}}
            </div>
          {%- endif -%}

          <div class="password-page__field">
            <label for="password-input" class="password-page__label">
              {{ 'password.password' | t }}
            </label>
            <input
              type="password"
              name="password"
              id="password-input"
              class="password-page__input"
              placeholder="{{ 'password.password_placeholder' | t | default: 'Enter store password' }}"
              required
              autocomplete="current-password"
              aria-required="true"
              aria-invalid="{% if form.errors %}true{% else %}false{% endif %}"
            >
          </div>

          <button type="submit" class="password-page__submit">
            {{ 'password.enter' | t }}
          </button>
        {%- endform -%}
      </div>

      {%- if section.settings.show_email_signup -%}
        <div class="password-page__signup">
          <h2 class="password-page__signup-title">
            {{- section.settings.email_heading | default: 'password.email_heading' | t | default: 'Notify me when this store opens' -}}
          </h2>
          {%- if section.settings.email_description != blank -%}
            <p class="password-page__signup-description">{{ section.settings.email_description }}</p>
          {%- endif -%}
          
          {%- form 'customer', class: 'password-page__email-form' -%}
            {%- if form.posted_successfully? -%}
              <div class="password-page__success" role="alert">
                {{- 'password.email_success' | t | default: "Thanks! We'll notify you when we launch." -}}
              </div>
            {%- else -%}
              <div class="password-page__email-field">
                <label for="email-input" class="visually-hidden">
                  {{- 'password.email' | t | default: 'Email address' -}}
                </label>
                <input
                  type="email"
                  name="contact[email]"
                  id="email-input"
                  class="password-page__email-input"
                  placeholder="{{ 'password.email_placeholder' | t | default: 'Enter your email' }}"
                  required
                  autocomplete="email"
                  aria-required="true"
                >
                <button type="submit" class="password-page__email-submit">
                  {{- 'password.email_submit' | t | default: 'Notify me' -}}
                </button>
              </div>
              
              {%- if form.errors -%}
                <div class="password-page__email-errors" role="alert">
                  {{- form.errors | default_errors -}}
                </div>
              {%- endif -%}
            {%- endif -%}
          {%- endform -%}
        </div>
      {%- endif -%}

      {%- if section.settings.show_social_links and shop.brand.social_media_accounts.size > 0 -%}
        <div class="password-page__social">
          <p class="password-page__social-title">
            {{- section.settings.social_heading | default: 'password.social_heading' | t | default: 'Follow us' -}}
          </p>
          <div class="password-page__social-links">
            {%- for account in shop.brand.social_media_accounts -%}
              <a
                href="{{ account.url }}"
                class="password-page__social-link"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="{{ account.platform | capitalize }}"
              >
                <span class="password-page__social-icon" aria-hidden="true">
                  {{- account.platform | capitalize -}}
                </span>
              </a>
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}

      {%- if section.settings.show_powered_by -%}
        <div class="password-page__powered-by">
          <p class="password-page__powered-by-text">
            {{- 'password.powered_by' | t | default: 'Powered by' -}}
            <a href="https://www.shopify.com" target="_blank" rel="noopener noreferrer" class="password-page__powered-by-link">
              Shopify
            </a>
          </p>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .password-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl) var(--page-margin);
    background: var(--color-background);
  }

  .password-page__container {
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
  }

  .password-page__content {
    text-align: center;
  }

  .password-page__logo {
    margin-bottom: var(--spacing-xl);
  }

  .password-page__logo img {
    max-width: 200px;
    height: auto;
  }

  .password-page__header {
    margin-bottom: var(--spacing-xl);
  }

  .password-page__title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: calc(var(--font-primary--weight) + 300);
    color: var(--color-foreground);
    margin: 0 0 var(--spacing-md) 0;
    line-height: 1.2;
  }

  .password-page__message,
  .password-page__description {
    font-size: var(--font-size-base);
    color: color-mix(in srgb, var(--color-foreground) 70%, transparent);
    margin: 0;
    line-height: 1.6;
  }

  .password-page__form-wrapper {
    margin: var(--spacing-xl) 0;
  }

  .password-page__form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .password-page__errors {
    padding: var(--spacing-md);
    background: color-mix(in srgb, var(--color-error) 10%, transparent);
    border: 1px solid var(--color-error);
    border-radius: var(--input-border-radius);
    color: var(--color-error);
    font-size: var(--font-size-sm);
    text-align: left;
  }

  .password-page__field {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    text-align: left;
  }

  .password-page__label {
    font-size: var(--font-size-sm);
    font-weight: var(--font-primary--weight);
    color: var(--color-foreground);
  }

  .password-page__input {
    width: 100%;
    padding: var(--input-padding-vertical) var(--input-padding-horizontal);
    border: 1px solid var(--color-border);
    border-radius: var(--input-border-radius);
    font-size: var(--font-size-base);
    font-family: var(--font-primary--family);
    color: var(--color-foreground);
    background: var(--color-background);
    transition: var(--transition);
  }

  .password-page__input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-primary) 20%, transparent);
  }

  .password-page__input[aria-invalid="true"] {
    border-color: var(--color-error);
  }

  .password-page__input[aria-invalid="true"]:focus {
    border-color: var(--color-error);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-error) 20%, transparent);
  }

  .password-page__submit {
    width: 100%;
    padding: var(--button-padding);
    background: var(--color-primary);
    color: var(--color-primary-text);
    border: 1px solid var(--color-primary);
    border-radius: var(--button-border-radius);
    font-size: var(--font-size-base);
    font-weight: var(--font-primary--weight);
    font-family: var(--font-primary--family);
    cursor: pointer;
    transition: var(--transition);
    min-height: 44px;
  }

  .password-page__submit:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .password-page__submit:focus {
    outline: none;
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-primary) 30%, transparent);
  }

  .password-page__signup {
    margin: var(--spacing-2xl) 0;
    padding: var(--spacing-xl);
    background: var(--color-secondary);
    border-radius: var(--card-border-radius);
    border: 1px solid var(--color-border);
  }

  .password-page__signup-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-primary--weight);
    color: var(--color-foreground);
    margin: 0 0 var(--spacing-sm) 0;
  }

  .password-page__signup-description {
    font-size: var(--font-size-sm);
    color: color-mix(in srgb, var(--color-foreground) 70%, transparent);
    margin: 0 0 var(--spacing-md) 0;
  }

  .password-page__email-form {
    margin-top: var(--spacing-md);
  }

  .password-page__success {
    padding: var(--spacing-md);
    background: color-mix(in srgb, var(--color-success) 10%, transparent);
    border: 1px solid var(--color-success);
    border-radius: var(--input-border-radius);
    color: var(--color-success);
    font-size: var(--font-size-sm);
  }

  .password-page__email-field {
    display: flex;
    gap: var(--spacing-sm);
  }

  .password-page__email-input {
    flex: 1;
    padding: var(--input-padding-vertical) var(--input-padding-horizontal);
    border: 1px solid var(--color-border);
    border-radius: var(--input-border-radius);
    font-size: var(--font-size-base);
    font-family: var(--font-primary--family);
    color: var(--color-foreground);
    background: var(--color-background);
    transition: var(--transition);
  }

  .password-page__email-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-primary) 20%, transparent);
  }

  .password-page__email-submit {
    padding: var(--input-padding-vertical) var(--spacing-lg);
    background: var(--color-primary);
    color: var(--color-primary-text);
    border: 1px solid var(--color-primary);
    border-radius: var(--input-border-radius);
    font-size: var(--font-size-base);
    font-weight: var(--font-primary--weight);
    font-family: var(--font-primary--family);
    cursor: pointer;
    transition: var(--transition);
    white-space: nowrap;
    min-height: 44px;
  }

  .password-page__email-submit:hover {
    opacity: 0.9;
  }

  .password-page__email-errors {
    margin-top: var(--spacing-sm);
    padding: var(--spacing-sm);
    background: color-mix(in srgb, var(--color-error) 10%, transparent);
    border: 1px solid var(--color-error);
    border-radius: var(--input-border-radius);
    color: var(--color-error);
    font-size: var(--font-size-sm);
    text-align: left;
  }

  .password-page__social {
    margin: var(--spacing-xl) 0;
  }

  .password-page__social-title {
    font-size: var(--font-size-sm);
    color: color-mix(in srgb, var(--color-foreground) 70%, transparent);
    margin: 0 0 var(--spacing-md) 0;
  }

  .password-page__social-links {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .password-page__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border: 1px solid var(--color-border);
    border-radius: 50%;
    color: var(--color-foreground);
    text-decoration: none;
    transition: var(--transition);
  }

  .password-page__social-link:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-primary-text);
    transform: translateY(-2px);
  }

  .password-page__social-icon {
    font-size: var(--font-size-sm);
  }

  .password-page__powered-by {
    margin-top: var(--spacing-xl);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
  }

  .password-page__powered-by-text {
    font-size: var(--font-size-sm);
    color: color-mix(in srgb, var(--color-foreground) 60%, transparent);
    margin: 0;
  }

  .password-page__powered-by-link {
    color: var(--color-primary);
    text-decoration: none;
  }

  .password-page__powered-by-link:hover {
    text-decoration: underline;
  }

  @media screen and (min-width: 750px) {
    .password-page__container {
      max-width: 600px;
    }

    .password-page__email-field {
      flex-direction: row;
    }
  }
{% endstylesheet %}

