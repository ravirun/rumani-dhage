{{ 'advanced-product.css' | asset_url | stylesheet_tag }}
<script src="{{ 'product-widget.js' | asset_url }}" defer="defer"></script>

<div class="highlight-section">
  <div
    class="product-offer-widget"
    data-base-price="{{ product.price }}"
    data-shipping-threshold="{{ section.settings.shipping_threshold | times: 100 }}"
    data-sub-discount="{{ section.settings.sub_discount }}"
  >
    {%- assign current_variant = product.selected_or_first_available_variant -%}

    <div class="offer-widget__header">
      <h2 class="offer-widget__title">{{ product.title }}</h2>
      <div class="offer-widget__rating">
        ★★★★★ <span style="color:var(--color-foreground);font-size:1.2rem;opacity:0.8;">(119 reviews)</span>
      </div>
      <div style="margin-top:0.5rem;">
        <span style="text-decoration:line-through;opacity:0.6;">{{ product.compare_at_price | money }}</span>
        <span style="font-weight:bold;font-size:1.8rem;">{{ product.price | money }}</span>
        {% if product.compare_at_price > product.price %}
          <span style="background:#e6f4ea;color:#1e8e3e;font-weight:700;font-size:1.1rem;padding:2px 6px;border-radius:4px;margin-left:0.5rem;"
            >SAVE
            {{
              product.compare_at_price
              | minus: product.price
              | times: 100.0
              | divided_by: product.compare_at_price
              | round
            -}}
            %</span
          >
        {% endif %}
      </div>
      <p style="margin-top:1rem;font-size:1.4rem;line-height:1.4;">
        {{ product.description | strip_html | truncate: 120 }}
      </p>
    </div>

    <!-- Volume Selector -->
    <label style="display:block;margin-bottom:0.5rem;font-weight:600;">Select quantity:</label>
    <div class="volume-selector">
      <div class="volume-option is-selected" data-qty="1">
        <span class="volume-option__qty">1 Saree</span>
        <span class="volume-option__unit">{{ product.price | money }}</span>
      </div>
      <div class="volume-option" data-qty="2">
        <div class="volume-option__tag">WEDDING GIFT</div>
        <span class="volume-option__qty">2 Sarees</span>
        <span class="volume-option__unit">Save 10%</span>
      </div>
      <div class="volume-option" data-qty="3">
        <span class="volume-option__qty">3 Sarees</span>
        <span class="volume-option__unit">Save 15%</span>
      </div>
    </div>

    <!-- Purchase Type Toggle -->
    <label style="display:block;margin-bottom:0.5rem;font-weight:600;">Select option:</label>
    <div class="purchase-type">
      <label class="purchase-option is-selected">
        <input type="radio" name="purchase_type" value="onetime" class="purchase-option__radio" checked>
        <div style="flex:1;">
          <div style="display:flex;justify-content:space-between;">
            <span class="purchase-option__label">One-time purchase</span>
            <span class="purchase-option__price" data-price-onetime>{{ product.price | money }}</span>
          </div>
        </div>
      </label>

      {%- if product.selling_plan_groups.size > 0 -%}
        {%- assign group = product.selling_plan_groups[0] -%}
        {%- assign plan = group.selling_plans[0] -%}
        <label class="purchase-option">
          <input
            type="radio"
            name="purchase_type"
            value="sub"
            class="purchase-option__radio"
            data-plan-id="{{ plan.id }}"
          >
          <div style="flex:1;">
            <div style="display:flex;justify-content:space-between;align-items:center;">
              <span class="purchase-option__label">Subscribe & Save {{ section.settings.sub_discount }}%</span>
              <span class="purchase-option__price" style="color:#d93025;">
                {{ product.price | times: 100 | minus: section.settings.sub_discount | times: 0.01 | money }}
              </span>
            </div>
            <div class="subscription-details">Never run out. Cancel anytime.</div>
          </div>
          <span class="purchase-option__badge">SAVE 20%</span>
        </label>
      {%- endif -%}
    </div>

    <!-- Shipping Progress -->
    <div class="shipping-progress">
      <span class="shipping-progress__text">You are close to Free Express Shipping!</span>
      <div class="shipping-progress__bar">
        <div class="shipping-progress__fill" style="width: 50%;"></div>
      </div>
    </div>

    <!-- Add to Cart Form -->
    {% form 'product', product %}
      <input type="hidden" name="id" value="{{ current_variant.id }}">
      <input type="hidden" name="quantity" value="1">
      <input type="hidden" name="selling_plan" value="">

      <button type="submit" name="add" class="offer-widget__atc">
        <span>Add to Cart</span>
        <span data-price-display>{{ product.price | money }}</span>
      </button>
    {% endform %}

    <!-- Trust Badges -->
    <ul class="offer-widget__trust">
      <li class="offer-widget__trust-item">
        <svg style="width:16px;height:16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path d="M5 13l4 4L19 7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Authentic Handloom Certified
      </li>
      <li class="offer-widget__trust-item">
        <svg style="width:16px;height:16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Free Fall & Pico Included
      </li>
      <li class="offer-widget__trust-item">
        <svg style="width:16px;height:16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Secure payment with Razorpay
      </li>
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Product Offer Widget",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "shipping_threshold",
      "min": 500,
      "max": 5000,
      "step": 100,
      "unit": "INR",
      "label": "Free Shipping Threshold",
      "default": 2000
    },
    {
      "type": "range",
      "id": "sub_discount",
      "min": 5,
      "max": 50,
      "step": 5,
      "unit": "%",
      "label": "Subscription Discount",
      "default": 15
    }
  ],
  "presets": [
    {
      "name": "Product Offer Widget"
    }
  ]
}
{% endschema %}
