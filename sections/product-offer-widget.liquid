{{ 'advanced-product.css' | asset_url | stylesheet_tag }}
<script src="{{ 'product-widget.js' | asset_url }}" defer="defer"></script>

<div class="highlight-section">
  <div class="product-offer-widget">
    {%- assign current_variant = product.selected_or_first_available_variant -%}

    <div class="offer-widget__header">
      <h2 class="offer-widget__title">{{ product.title }}</h2>
      <div class="offer-widget__price-area">
        <span style="font-weight:600;font-size:1.8rem;">{{ product.price | money }}</span>
        {% if product.compare_at_price > product.price %}
          <span style="text-decoration:line-through;opacity:0.6;font-size:1.4rem;">
            {{- product.compare_at_price | money -}}
          </span>
        {% endif %}
      </div>
      <p style="margin-top:1rem;font-size:1.4rem;line-height:1.5;color:rgba(var(--color-foreground), 0.75);">
        {{
          product.metafields.custom.short_description
          | metafield_tag
          | default: product.description
          | strip_html
          | truncate: 140
        }}
      </p>
    </div>

    <!-- Bridal Bundle Selector (Visual for Positioning) -->
    <div class="bridal-bundle-selector">
      <label class="bridal-option is-selected">
        <input type="radio" name="bundle_type" checked class="bridal-option__radio">
        <div class="bridal-option__info">
          <span class="bridal-option__title">Saree Only</span>
          <span class="bridal-option__desc">Standard packaging</span>
        </div>
      </label>
      <label class="bridal-option">
        <input type="radio" name="bundle_type" class="bridal-option__radio">
        <div class="bridal-option__info">
          <span class="bridal-option__title">Add Blouse Stitching</span>
          <span class="bridal-option__desc">Custom fit (+ ₹1,200)</span>
        </div>
      </label>
      <label class="bridal-option">
        <input type="radio" name="bundle_type" class="bridal-option__radio">
        <div class="bridal-option__info">
          <span class="bridal-option__title">Complete Bridal Set</span>
          <span class="bridal-option__desc">Unboxing experience + Accessories</span>
        </div>
      </label>
    </div>

    <!-- Auth Strip -->
    <div class="auth-strip">Handwoven • Limited Edition • Direct from Loom</div>

    <!-- Add to Cart Form -->
    {% form 'product', product %}
      <input type="hidden" name="id" value="{{ current_variant.id }}">
      <input type="hidden" name="quantity" value="1">
      <!-- Hidden input for custom color property -->
      <input type="hidden" name="properties[Custom Color]" id="custom-color-property" disabled>

      <div class="shipping-message">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
        </svg>
        Complimentary Insured Delivery Included
      </div>

      <button type="submit" name="add" class="offer-widget__atc" id="offer-widget-cta">
        <span class="cta-text">Secure This Saree</span>
        <span class="cta-price">{{ product.price | money }}</span>
      </button>
    {% endform %}

    <!-- Luxury Trust Stack -->
    <ul class="luxury-trust">
      <li>
        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        {% if product.metafields.custom.silk_mark -%}
          Silk Mark Certified Pure Silk
        {%- else -%}
          Authentic Handloom Guarantee
        {%- endif %}
      </li>
      {% if product.metafields.custom.weaving_region %}
        <li>
          <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          Handwoven by {{ product.metafields.custom.weaving_region }} Artisans
        </li>
      {% endif %}
      <li>
        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        Free Fall & Pico Finishing
      </li>
      <li>
        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        Easy Exchange Support
      </li>
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Product Offer Widget",
  "tag": "section",
  "class": "section",
  "settings": [],
  "presets": [
    {
      "name": "Product Offer Widget"
    }
  ]
}
{% endschema %}
