{% comment %}
  This section is used in the product template to render product page with
  media, content, and add-to-cart form.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/product
{% endcomment %}

<div class="product-images">
  {% for image in product.images %}
    {% render 'image', class: 'product-image', image: image %}
  {% endfor %}
</div>

<div class="product-info">
  <h1>{{ product.title }}</h1>
  <p>{{ product.price | money }}</p>
  <p>{{ product.description }}</p>
</div>

<div class="product-form">
  {% form 'product', product, class: 'product-form__form' %}
    {% assign current_variant = product.selected_or_first_available_variant %}

    <select name="id">
      {% for variant in product.variants %}
        <option
          value="{{ variant.id }}"
          {% if variant == current_variant %}
            selected="selected"
          {% endif %}
        >
          {{ variant.title }} - {{ variant.price | money }}
        </option>
      {% endfor %}
    </select>

    <input type="text" name="quantity" min="1" value="1">

    <button type="submit" class="product-form__submit">
      {% render 'lucide-icon', icon_name: 'shopping-cart', size: 18, class: 'add-to-cart-icon' %}
      Add to cart
    </button>
    {{ form | payment_button }}
  {% endform %}
</div>

{% javascript %}
  // Open cart drawer after adding product to cart
  (function() {
    const productForm = document.querySelector('.product-form__form');
    if (productForm) {
      productForm.addEventListener('submit', function(e) {
        // Let the form submit normally, then open cart drawer
        setTimeout(function() {
          if (typeof openCartDrawer === 'function') {
            openCartDrawer();
          }
          // Trigger cart update event
          document.dispatchEvent(new CustomEvent('cart:updated'));
        }, 500);
      });
    }
  })();
{% endjavascript %}

{% stylesheet %}
  .add-to-cart-icon {
    display: inline-block;
    vertical-align: middle;
    margin-right: 0.5rem;
  }
  button[type="submit"] {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.product",
  "settings": [],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
