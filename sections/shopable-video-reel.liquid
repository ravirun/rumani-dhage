{% comment %}
  Shopable Video Reel Section

  Displays a grid of videos with play buttons that can link to products.
{% endcomment %}

{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .shopable-video-reel {
    width: 100%;
  }

  .shopable-video-reel__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .shopable-video-reel__title {
    margin: 0;
  }

  .shopable-video-reel__view-all {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: rgb(var(--color-foreground));
    font-size: var(--font-body-size);
    font-family: var(--font-body-family);
    transition: opacity var(--duration-short) ease;
  }

  .shopable-video-reel__view-all:hover {
    opacity: 0.7;
  }

  .shopable-video-reel__grid {
    display: flex;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    gap: 1.5rem;
    padding-bottom: 0.5rem;
  }

  .shopable-video-reel__grid::-webkit-scrollbar {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .shopable-video-reel__grid {
      gap: 1rem;
    }
  }

  .shopable-video-reel__item {
    position: relative;
    border-radius: var(--media-radius, 14px);
    overflow: hidden;
    aspect-ratio: 9 / 16;
    background-color: rgba(var(--color-foreground), 0.04);
    flex-shrink: 0;
    scroll-snap-align: start;
    width: calc(50vw - 2rem);
    max-width: 300px;
  }

  @media screen and (max-width: 749px) {
    .shopable-video-reel__item {
      width: calc(100vw - 3rem);
      max-width: 300px;
    }
  }

  @media screen and (min-width: 750px) {
    .shopable-video-reel__item {
      width: calc(50vw - 2rem);
      max-width: 350px;
    }
  }

  .shopable-video-reel__item-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .shopable-video-reel__poster {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .shopable-video-reel__play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform var(--duration-short) ease, background-color var(--duration-short) ease;
    z-index: 2;
  }

  .shopable-video-reel__item:hover .shopable-video-reel__play-button {
    transform: translate(-50%, -50%) scale(1.1);
    background-color: rgba(255, 255, 255, 1);
  }

  .shopable-video-reel__play-button .svg-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .shopable-video-reel__play-button .icon-play {
    width: 24px;
    height: 24px;
    margin-left: 4px;
    color: rgb(var(--color-foreground));
  }

  .shopable-video-reel__item-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="shopable-video-reel page-width section-{{ section.id }}-padding">
    <div class="shopable-video-reel__header">
      {%- if section.settings.title != blank -%}
        <h2 class="shopable-video-reel__title title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}
      {%- if section.settings.view_all_text != blank and section.settings.view_all_link != blank -%}
        <a href="{{ section.settings.view_all_link }}" class="shopable-video-reel__view-all">
          {{ section.settings.view_all_text }}
          <span>→</span>
        </a>
      {%- endif -%}
    </div>

    {%- if section.blocks.size > 0 -%}
      <div class="shopable-video-reel__grid">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {% when 'video' %}
              <div class="shopable-video-reel__item" {{ block.shopify_attributes }}>
                {%- liquid
                  assign poster = block.settings.video.preview_image | default: block.settings.poster_image
                  assign product_link = block.settings.product_link
                -%}

                {%- if product_link != blank -%}
                  <a href="{{ product_link }}" class="shopable-video-reel__item-link">
                {%- endif -%}

                <div class="shopable-video-reel__item-wrapper">
                  {%- if poster != null -%}
                    {{
                      poster
                      | image_url: width: 1200
                      | image_tag:
                        loading: 'lazy',
                        sizes: '(min-width: 750px) 50vw, calc(100vw - 3rem)',
                        widths: '375, 675, 750, 1100',
                        alt: block.settings.title
                      | default: 'Video thumbnail', class: 'shopable-video-reel__poster'
                    }}
                  {%- else -%}
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg shopable-video-reel__poster' }}
                  {%- endif -%}

                  <div class="shopable-video-reel__play-button" aria-hidden="true">
                    <span class="svg-wrapper">
                      {{- 'icon-play.svg' | inline_asset_content -}}
                    </span>
                  </div>
                </div>

                {%- if product_link != blank -%}
                  </a>
                {%- endif -%}
              </div>
          {% endcase %}
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="shopable-video-reel__grid">
        {%- for i in (1..4) -%}
          <div class="shopable-video-reel__item">
            <div class="shopable-video-reel__item-wrapper">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg shopable-video-reel__poster' }}
              <div class="shopable-video-reel__play-button" aria-hidden="true">
                <span class="svg-wrapper">
                  {{- 'icon-play.svg' | inline_asset_content -}}
                </span>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

