{% comment %}
  Testimonials Section
  Displays customer testimonials with auto-scrolling animation.
  Desktop: 1 line, Mobile: 2 lines
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .testimonials {
    width: 100%;

  }
  .testimonial-container{
    background-color: #b91d4c;
    border-radius: 16px;
  }

  .testimonials__header {


    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;
    gap: 1rem;
  }

  @media screen and (max-width: 749px) {
    .testimonials__header {
      padding: 1.5rem ;
      border-radius: 16px ;
    }
  }

  .testimonials__title {
    color: #FFFFFF;

  }

  @media screen and (max-width: 749px) {
  }

  .testimonials__read-all {
    color: #FFFFFF;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 400;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: opacity var(--duration-short) ease;
  }

  .testimonials__read-all:hover {
    opacity: 0.8;
  }

  .testimonials__container {
    padding: 2rem;
    overflow: hidden;
    position: relative;
  }

  @media screen and (max-width: 749px) {
    .testimonials__container {
      padding: 1.5rem;
      overflow: hidden;
      height: auto;
      min-height: calc(2 * (min-content + 1rem));
    }
  }

  .testimonials__track {
    display: flex;
    gap: 1.5rem;
    width: fit-content;
    animation: scroll-{{ section.id }} {{ section.settings.scroll_duration | default: 30 }}s linear infinite;
  }

  @media screen and (max-width: 749px) {
    .testimonials__track {
      gap: 1rem;
      flex-direction: row;
      flex-wrap: nowrap;
      display: grid;
      grid-auto-flow: column;
      grid-template-rows: repeat(2, 1fr);
      grid-auto-columns: calc(100vw - 3rem);
      animation: scroll-mobile-{{ section.id }} {{ section.settings.scroll_duration | default: 30 }}s linear infinite;
    }
  }

  .testimonials__track:hover {
    animation-play-state: paused;
  }

  @keyframes scroll-{{ section.id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-50% - 0.75rem));
    }
  }

  @keyframes scroll-mobile-{{ section.id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-50% - 0.5rem));
    }
  }

  .testimonials__card {
    background-color: #F8F8F8;
    border-radius: 20px;
    padding: 2rem;
    flex-shrink: 0;
    width: 400px;
    max-width: calc(100vw - 3rem);
    box-sizing: border-box;
  }

  @media screen and (max-width: 749px) {
    .testimonials__card {
      width: 100%;
      padding: 1.5rem;
      border-radius: 16px;
      height: fit-content;
    }
  }

  .testimonials__product-link {
    color: #b91d4c;
    text-decoration: none;
    font-style: italic;
    font-size: 1rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: opacity var(--duration-short) ease;
    font-family: var(--font-body-family);
  }

  .testimonials__product-link:hover {
    opacity: 0.7;
  }

  /* Duplicate items for seamless loop */
  .testimonials__track .testimonials__card:nth-child(n) {
    /* Original items */
  }

  @media (prefers-reduced-motion: reduce) {
    .testimonials__track {
      animation: none;
    }
  }
{%- endstyle -%}

<div class="testimonials section-{{ section.id }}-padding">
  <div class="page-width ">
    <div class="testimonial-container">
      <div class="testimonials__header">
        {%- if section.settings.title != blank -%}
          <h2 class="testimonials__title heading heading--h1">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
        {%- if section.settings.read_all_text != blank and section.settings.read_all_link != blank -%}
          <a href="{{ section.settings.read_all_link }}" class="testimonials__read-all">
            {{ section.settings.read_all_text }}
            <span>→</span>
          </a>
        {%- endif -%}
      </div>

      <div class="testimonials__container">
        {%- if section.blocks.size > 0 -%}
          <div class="testimonials__track">
            {%- for block in section.blocks -%}
              {% case block.type %}
                {% when 'testimonial' %}
                  <div class="testimonials__card" {{ block.shopify_attributes }}>
                    {%- if block.settings.testimonial_text != blank -%}
                      <p class="testimonials__text">
                        <i>
                          {{ block.settings.testimonial_text }}
                        </i>
                      </p>
                    {%- endif -%}
                    {%- if block.settings.product_link != blank -%}
                      <a href="{{ block.settings.product_link }}" class="testimonials__product-link">
                        Product Link
                        <span>→</span>
                      </a>
                    {%- endif -%}
                  </div>
              {% endcase %}
            {%- endfor -%}
