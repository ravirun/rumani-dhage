{% comment %}
  Ajax Cart Notifications
  Styles for cart operation notifications (success/error messages)
{% endcomment %}

{% stylesheet %}
  .ajax-cart-notifications {
    position: fixed;
    top: var(--spacing-lg);
    right: var(--spacing-lg);
    z-index: 10000;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    pointer-events: none;
  }

  .ajax-cart-notification {
    padding: var(--spacing-md) var(--spacing-lg);
    border-radius: var(--card-border-radius);
    box-shadow: var(--shadow-lg);
    font-size: var(--font-size-sm);
    font-weight: var(--font-primary--weight);
    min-width: 16rem;
    max-width: 24rem;
    opacity: 0;
    transform: translateX(100%);
    transition: opacity 0.3s ease, transform 0.3s ease;
    pointer-events: auto;
  }

  .ajax-cart-notification--show {
    opacity: 1;
    transform: translateX(0);
  }

  .ajax-cart-notification--success {
    background: var(--color-success);
    color: white;
  }

  .ajax-cart-notification--error {
    background: var(--color-error);
    color: white;
  }

  .ajax-cart-notification--info {
    background: var(--color-primary);
    color: var(--color-primary-text);
  }

  body.ajax-cart-loading {
    cursor: wait;
  }

  body.ajax-cart-loading * {
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ajax-cart-notifications {
      top: var(--spacing-md);
      right: var(--spacing-md);
      left: var(--spacing-md);
    }

    .ajax-cart-notification {
      min-width: auto;
      max-width: 100%;
    }
  }
{% endstylesheet %}

