{% comment %}
  Renders a collection card for the explorer grid view.
  Accepts:
  - collection: {Object} Collection object
  - animation_delay: {Number} Delay for the animation
{% endcomment %}

<li class="animate-item" style="animation-delay: {{ animation_delay }}s">
  <div class="group cursor-pointer" onclick="openCollection({{ collection.id }}, {{ forloop.index0 }})">
    <div class="relative aspect-[3/4] overflow-hidden rounded-2xl mb-3 shadow-sm group-hover:shadow-xl transition-all duration-500">
      {%- if collection.featured_image -%}
        <img
          src="{{ collection.featured_image | image_url: width: 800 }}"
          alt="{{ collection.title | escape }}"
          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          loading="lazy"
          width="800"
          height="800"
        >
      {%- else -%}
        {{
          'collection-1'
          | placeholder_svg_tag: 'w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 grayscale'
        }}
      {%- endif -%}
      <div class="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition-all"></div>
    </div>
    <h3 class="serif text-lg font-bold text-gray-900 group-hover:text-[#917646] transition-colors">
      {{ collection.title }}
    </h3>
    <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">
      {{ collection.all_products_count }} Products
    </p>
  </div>
</li>
