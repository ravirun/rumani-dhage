{% comment %}
  Clickable Component
  A generic interactive container component that provides a flexible alternative for custom interactive elements.
  
  @param {string} content - Clickable content (required)
  @param {string} url - Link URL (optional)
  @param {string} type - Element type: link, button, div (default: link)
  @param {string} variant - Style variant: default, card, button (default: default)
  @param {boolean} disabled - Disable interaction (default: false)
  @param {string} class - Additional CSS classes
  @param {string} attributes - Additional HTML attributes
  
  @example
  {% render 'component-actions-clickable', content: 'Clickable content', url: '/page', variant: 'card' %}
{% endcomment %}

{% liquid
  assign content = content | default: ''
  assign url = url | default: ''
  assign type = type | default: 'link'
  assign variant = variant | default: 'default'
  assign disabled = disabled | default: false
  assign class = class | default: ''
  assign attributes = attributes | default: ''
  
  unless content != blank
    echo '<!-- Error: content parameter required for clickable component -->'
    break
  endunless
%}

{% if type == 'link' and url != blank %}
  <a 
    href="{{ url }}"
    class="ds-clickable ds-clickable--{{ variant }} {% if disabled %}ds-clickable--disabled{% endif %} {{ class }}"
    {% if disabled %}aria-disabled="true" tabindex="-1"{% endif %}
    {{ attributes }}
  >
    {{ content }}
  </a>
{% elsif type == 'button' %}
  <button 
    type="button"
    class="ds-clickable ds-clickable--{{ variant }} {% if disabled %}ds-clickable--disabled{% endif %} {{ class }}"
    {% if disabled %}disabled{% endif %}
    {{ attributes }}
  >
    {{ content }}
  </button>
{% else %}
  <div 
    class="ds-clickable ds-clickable--{{ variant }} {% if disabled %}ds-clickable--disabled{% endif %} {{ class }}"
    {% if disabled %}aria-disabled="true"{% endif %}
    role="button"
    tabindex="0"
    {{ attributes }}
  >
    {{ content }}
  </div>
{% endif %}

{% stylesheet %}
  .ds-clickable {
    display: inline-block;
    cursor: pointer;
    transition: var(--transition);
    text-decoration: none;
    color: inherit;
  }
  
  .ds-clickable--default {
    /* No special styling */
  }
  
  .ds-clickable--card {
    padding: var(--card-padding);
    background-color: var(--color-background);
    border: var(--card-border-width) solid var(--color-border);
    border-radius: var(--card-border-radius);
    box-shadow: var(--shadow);
  }
  
  .ds-clickable--card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .ds-clickable--button {
    padding: var(--button-padding);
    background-color: var(--color-primary);
    color: var(--color-primary-text);
    border-radius: var(--button-border-radius);
    border: none;
    font-family: var(--font-primary--family);
  }
  
  .ds-clickable--button:hover {
    opacity: 0.9;
  }
  
  .ds-clickable--disabled,
  .ds-clickable[disabled],
  .ds-clickable[aria-disabled="true"] {
    opacity: 0.6;
    cursor: not-allowed;
    pointer-events: none;
  }
{% endstylesheet %}

