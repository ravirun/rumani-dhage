{% comment %}
  DateField Component
  Allow users to select a specific date with a date picker.
  
  @param {string} name - Input name attribute (required)
  @param {string} id - Input ID attribute (optional)
  @param {string} value - Input value (optional)
  @param {string} placeholder - Placeholder text (optional)
  @param {string} label - Label text (optional)
  @param {string} min - Minimum date (optional)
  @param {string} max - Maximum date (optional)
  @param {boolean} required - Mark as required (default: false)
  @param {boolean} disabled - Disable input (default: false)
  @param {string} error - Error message (optional)
  @param {string} help - Help text (optional)
  @param {string} class - Additional CSS classes
  @param {string} attributes - Additional HTML attributes
  
  @example
  {% render 'component-forms-date-field', name: 'birthday', label: 'Date of birth' %}
{% endcomment %}

{% liquid
  assign name = name | default: ''
  assign id = id | default: name
  assign value = value | default: ''
  assign placeholder = placeholder | default: ''
  assign label = label | default: ''
  assign min = min | default: ''
  assign max = max | default: ''
  assign required = required | default: false
  assign disabled = disabled | default: false
  assign error = error | default: ''
  assign help = help | default: ''
  assign class = class | default: ''
  assign attributes = attributes | default: ''
  
  unless name != blank
    echo '<!-- Error: name parameter required for date-field component -->'
    break
  endunless
  
  assign date_attributes = ''
  if min != blank
    assign date_attributes = date_attributes | append: ' min="' | append: min | append: '"'
  endif
  if max != blank
    assign date_attributes = date_attributes | append: ' max="' | append: max | append: '"'
  endif
  assign attributes = attributes | append: date_attributes
%}

<div class="ds-date-field {{ class }}">
  {% if label != blank %}
    <label for="{{ id }}" class="ds-date-field__label">
      {{ label }}
      {% if required %}<span class="ds-date-field__required" aria-label="required">*</span>{% endif %}
    </label>
  {% endif %}
  
  <input
    type="date"
    id="{{ id }}"
    name="{{ name }}"
    value="{{ value }}"
    placeholder="{{ placeholder }}"
    class="ds-input ds-date-field__input {% if error != blank %}ds-date-field__input--error{% endif %}"
    {% if required %}required{% endif %}
    {% if disabled %}disabled{% endif %}
    {{ attributes }}
  >
  
  {% if error != blank %}
    <span class="ds-date-field__error" role="alert">{{ error }}</span>
  {% endif %}
  
  {% if help != blank and error == blank %}
    <span class="ds-date-field__help">{{ help }}</span>
  {% endif %}
</div>

{% stylesheet %}
  .ds-date-field {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }
  
  .ds-date-field__label {
    font-size: var(--font-size-sm);
    font-weight: var(--font-primary--weight);
    color: var(--color-foreground);
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
  }
  
  .ds-date-field__required {
    color: var(--color-error);
  }
  
  .ds-date-field__input {
    width: 100%;
  }
  
  .ds-date-field__input--error {
    border-color: var(--color-error);
  }
  
  .ds-date-field__input--error:focus {
    border-color: var(--color-error);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-error) 20%, transparent);
  }
  
  .ds-date-field__error {
    font-size: var(--font-size-sm);
    color: var(--color-error);
    display: block;
  }
  
  .ds-date-field__help {
    font-size: var(--font-size-sm);
    color: color-mix(in srgb, var(--color-foreground) 60%, transparent);
    display: block;
  }
{% endstylesheet %}

