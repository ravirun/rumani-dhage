{% comment %}
  TextArea Component
  Collect longer text content from users with a multi-line input that expands automatically.
  
  @param {string} name - Textarea name attribute (required)
  @param {string} id - Textarea ID attribute (optional)
  @param {string} value - Textarea value (optional)
  @param {string} placeholder - Placeholder text (optional)
  @param {string} label - Label text (optional)
  @param {number} rows - Number of rows (default: 4)
  @param {boolean} required - Mark as required (default: false)
  @param {boolean} disabled - Disable textarea (default: false)
  @param {boolean} readonly - Make readonly (default: false)
  @param {string} error - Error message (optional)
  @param {string} help - Help text (optional)
  @param {string} class - Additional CSS classes
  @param {string} attributes - Additional HTML attributes
  
  @example
  {% render 'component-forms-textarea', name: 'message', label: 'Message', rows: 5, required: true %}
{% endcomment %}

{% liquid
  assign name = name | default: ''
  assign id = id | default: name
  assign value = value | default: ''
  assign placeholder = placeholder | default: ''
  assign label = label | default: ''
  assign rows = rows | default: 4
  assign required = required | default: false
  assign disabled = disabled | default: false
  assign readonly = readonly | default: false
  assign error = error | default: ''
  assign help = help | default: ''
  assign class = class | default: ''
  assign attributes = attributes | default: ''
  
  unless name != blank
    echo '<!-- Error: name parameter required for textarea component -->'
    break
  endunless
%}

<div class="ds-textarea {{ class }}">
  {% if label != blank %}
    <label for="{{ id }}" class="ds-textarea__label">
      {{ label }}
      {% if required %}<span class="ds-textarea__required" aria-label="required">*</span>{% endif %}
    </label>
  {% endif %}
  
  <textarea
    id="{{ id }}"
    name="{{ name }}"
    rows="{{ rows }}"
    placeholder="{{ placeholder }}"
    class="ds-input ds-textarea__input {% if error != blank %}ds-textarea__input--error{% endif %}"
    {% if required %}required{% endif %}
    {% if disabled %}disabled{% endif %}
    {% if readonly %}readonly{% endif %}
    {{ attributes }}
  >{{ value }}</textarea>
  
  {% if error != blank %}
    <span class="ds-textarea__error" role="alert">{{ error }}</span>
  {% endif %}
  
  {% if help != blank and error == blank %}
    <span class="ds-textarea__help">{{ help }}</span>
  {% endif %}
</div>

{% stylesheet %}
  .ds-textarea {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }
  
  .ds-textarea__label {
    font-size: var(--font-size-sm);
    font-weight: var(--font-primary--weight);
    color: var(--color-foreground);
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
  }
  
  .ds-textarea__required {
    color: var(--color-error);
  }
  
  .ds-textarea__input {
    width: 100%;
    min-height: calc(var(--input-padding-vertical) * 2 + var(--font-size-base) * var(--line-height-body) * 4);
    resize: vertical;
    font-family: var(--font-primary--family);
  }
  
  .ds-textarea__input--error {
    border-color: var(--color-error);
  }
  
  .ds-textarea__input--error:focus {
    border-color: var(--color-error);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-error) 20%, transparent);
  }
  
  .ds-textarea__error {
    font-size: var(--font-size-sm);
    color: var(--color-error);
    display: block;
  }
  
  .ds-textarea__help {
    font-size: var(--font-size-sm);
    color: color-mix(in srgb, var(--color-foreground) 60%, transparent);
    display: block;
  }
{% endstylesheet %}

