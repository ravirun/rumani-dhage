{% comment %}
  Box Component
  A generic container that provides a flexible alternative for custom designs not achievable with existing components.
  
  @param {string} content - Box content (required)
  @param {string} padding - Padding size: none, xs, sm, md, lg, xl, 2xl, 3xl (default: md)
  @param {string} margin - Margin size: none, xs, sm, md, lg, xl, 2xl, 3xl (default: none)
  @param {string} background - Background color: default, primary, secondary, accent (default: default)
  @param {string} border_radius - Border radius: none, sm, md, lg, full (default: md)
  @param {boolean} border - Show border (default: false)
  @param {boolean} shadow - Show shadow (default: false)
  @param {string} width - Width: auto, full, fit (default: auto)
  @param {string} class - Additional CSS classes
  @param {string} attributes - Additional HTML attributes
  
  @example
  {% render 'component-structure-box', content: 'Box content', padding: 'lg', background: 'primary' %}
{% endcomment %}

{% liquid
  assign content = content | default: ''
  assign padding = padding | default: 'md'
  assign margin = margin | default: 'none'
  assign background = background | default: 'default'
  assign border_radius = border_radius | default: 'md'
  assign border = border | default: false
  assign shadow = shadow | default: false
  assign width = width | default: 'auto'
  assign class = class | default: ''
  assign attributes = attributes | default: ''
%}

<div 
  class="ds-box ds-box--padding-{{ padding }} ds-box--margin-{{ margin }} ds-box--background-{{ background }} ds-box--radius-{{ border_radius }} {% if border %}ds-box--border{% endif %} {% if shadow %}ds-box--shadow{% endif %} ds-box--width-{{ width }} {{ class }}"
  {{ attributes }}
>
  {{ content }}
</div>

{% stylesheet %}
  .ds-box {
    display: block;
  }
  
  .ds-box--padding-none { padding: 0; }
  .ds-box--padding-xs { padding: var(--spacing-xs); }
  .ds-box--padding-sm { padding: var(--spacing-sm); }
  .ds-box--padding-md { padding: var(--spacing-md); }
  .ds-box--padding-lg { padding: var(--spacing-lg); }
  .ds-box--padding-xl { padding: var(--spacing-xl); }
  .ds-box--padding-2xl { padding: var(--spacing-2xl); }
  .ds-box--padding-3xl { padding: var(--spacing-3xl); }
  
  .ds-box--margin-none { margin: 0; }
  .ds-box--margin-xs { margin: var(--spacing-xs); }
  .ds-box--margin-sm { margin: var(--spacing-sm); }
  .ds-box--margin-md { margin: var(--spacing-md); }
  .ds-box--margin-lg { margin: var(--spacing-lg); }
  .ds-box--margin-xl { margin: var(--spacing-xl); }
  .ds-box--margin-2xl { margin: var(--spacing-2xl); }
  .ds-box--margin-3xl { margin: var(--spacing-3xl); }
  
  .ds-box--background-default { background-color: var(--color-background); }
  .ds-box--background-primary { background-color: var(--color-primary); color: var(--color-primary-text); }
  .ds-box--background-secondary { background-color: var(--color-secondary); color: var(--color-secondary-text); }
  .ds-box--background-accent { background-color: var(--color-accent); }
  
  .ds-box--radius-none { border-radius: 0; }
  .ds-box--radius-sm { border-radius: calc(var(--card-border-radius) * 0.5); }
  .ds-box--radius-md { border-radius: var(--card-border-radius); }
  .ds-box--radius-lg { border-radius: calc(var(--card-border-radius) * 1.5); }
  .ds-box--radius-full { border-radius: 9999px; }
  
  .ds-box--border {
    border: var(--card-border-width) solid var(--color-border);
  }
  
  .ds-box--shadow {
    box-shadow: var(--shadow);
  }
  
  .ds-box--width-auto { width: auto; }
  .ds-box--width-full { width: 100%; }
  .ds-box--width-fit { width: fit-content; }
{% endstylesheet %}

