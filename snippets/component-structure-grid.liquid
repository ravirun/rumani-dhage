{% comment %}
  Grid Component
  Use s-grid to organize your content in a matrix of rows and columns and make responsive layouts for pages.
  
  @param {string} content - Grid content (required)
  @param {number} columns - Number of columns (default: 3)
  @param {number} columns_mobile - Number of columns on mobile (default: 1)
  @param {string} gap - Gap between items: none, xs, sm, md, lg, xl, 2xl (default: md)
  @param {string} align - Alignment: start, center, end, stretch (default: stretch)
  @param {string} class - Additional CSS classes
  @param {string} attributes - Additional HTML attributes
  
  @example
  {% render 'component-structure-grid', content: 'Grid content', columns: 3, gap: 'lg' %}
{% endcomment %}

{% liquid
  assign content = content | default: ''
  assign columns = columns | default: 3
  assign columns_mobile = columns_mobile | default: 1
  assign gap = gap | default: 'md'
  assign align = align | default: 'stretch'
  assign class = class | default: ''
  assign attributes = attributes | default: ''
%}

<div 
  class="ds-grid ds-grid--columns-{{ columns }} ds-grid--columns-mobile-{{ columns_mobile }} ds-grid--gap-{{ gap }} ds-grid--align-{{ align }} {{ class }}"
  {{ attributes }}
>
  {{ content }}
</div>

{% stylesheet %}
  .ds-grid {
    display: grid;
  }
  
  .ds-grid--gap-none { gap: 0; }
  .ds-grid--gap-xs { gap: var(--spacing-xs); }
  .ds-grid--gap-sm { gap: var(--spacing-sm); }
  .ds-grid--gap-md { gap: var(--spacing-md); }
  .ds-grid--gap-lg { gap: var(--spacing-lg); }
  .ds-grid--gap-xl { gap: var(--spacing-xl); }
  .ds-grid--gap-2xl { gap: var(--spacing-2xl); }
  
  .ds-grid--align-start { align-items: start; }
  .ds-grid--align-center { align-items: center; }
  .ds-grid--align-end { align-items: end; }
  .ds-grid--align-stretch { align-items: stretch; }
  
  /* Desktop columns defined in media query below */
  
  /* Mobile-first: mobile columns apply by default */
  .ds-grid--columns-mobile-1 { grid-template-columns: repeat(1, 1fr); }
  .ds-grid--columns-mobile-2 { grid-template-columns: repeat(2, 1fr); }
  .ds-grid--columns-mobile-3 { grid-template-columns: repeat(3, 1fr); }
  
  @media screen and (min-width: 750px) {
    /* Desktop columns override mobile on larger screens */
    .ds-grid--columns-1 { grid-template-columns: repeat(1, 1fr); }
    .ds-grid--columns-2 { grid-template-columns: repeat(2, 1fr); }
    .ds-grid--columns-3 { grid-template-columns: repeat(3, 1fr); }
    .ds-grid--columns-4 { grid-template-columns: repeat(4, 1fr); }
    .ds-grid--columns-5 { grid-template-columns: repeat(5, 1fr); }
    .ds-grid--columns-6 { grid-template-columns: repeat(6, 1fr); }
  }
{% endstylesheet %}

