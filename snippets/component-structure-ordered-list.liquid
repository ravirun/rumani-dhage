{% comment %}
  OrderedList Component
  Displays a numbered list of related items in a specific sequence.
  
  @param {array} items - Array of list items (required)
  @param {string} marker - List marker style: decimal, lower-alpha, upper-alpha, lower-roman, upper-roman (default: decimal)
  @param {string} spacing - Spacing between items: none, xs, sm, md, lg (default: sm)
  @param {string} class - Additional CSS classes
  @param {string} attributes - Additional HTML attributes
  
  @example
  {% assign items = 'Item 1|Item 2|Item 3' | split: '|' %}
  {% render 'component-structure-ordered-list', items: items %}
{% endcomment %}

{% liquid
  assign items = items | default: empty
  assign marker = marker | default: 'decimal'
  assign spacing = spacing | default: 'sm'
  assign class = class | default: ''
  assign attributes = attributes | default: ''
  
  unless items != empty
    echo '<!-- Error: items parameter required for ordered-list component -->'
    break
  endunless
%}

<ol 
  class="ds-ordered-list ds-ordered-list--{{ marker }} ds-ordered-list--spacing-{{ spacing }} {{ class }}"
  {{ attributes }}
>
  {% for item in items %}
    <li class="ds-ordered-list__item">{{ item }}</li>
  {% endfor %}
</ol>

{% stylesheet %}
  .ds-ordered-list {
    margin: 0;
    padding-left: var(--spacing-lg);
    color: var(--color-foreground);
  }
  
  .ds-ordered-list--decimal {
    list-style-type: decimal;
  }
  
  .ds-ordered-list--lower-alpha {
    list-style-type: lower-alpha;
  }
  
  .ds-ordered-list--upper-alpha {
    list-style-type: upper-alpha;
  }
  
  .ds-ordered-list--lower-roman {
    list-style-type: lower-roman;
  }
  
  .ds-ordered-list--upper-roman {
    list-style-type: upper-roman;
  }
  
  .ds-ordered-list--spacing-none .ds-ordered-list__item {
    margin-bottom: 0;
  }
  
  .ds-ordered-list--spacing-xs .ds-ordered-list__item {
    margin-bottom: var(--spacing-xs);
  }
  
  .ds-ordered-list--spacing-sm .ds-ordered-list__item {
    margin-bottom: var(--spacing-sm);
  }
  
  .ds-ordered-list--spacing-md .ds-ordered-list__item {
    margin-bottom: var(--spacing-md);
  }
  
  .ds-ordered-list--spacing-lg .ds-ordered-list__item {
    margin-bottom: var(--spacing-lg);
  }
  
  .ds-ordered-list__item:last-child {
    margin-bottom: 0;
  }
{% endstylesheet %}

