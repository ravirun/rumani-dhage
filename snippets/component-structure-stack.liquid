{% comment %}
  Stack Component
  Organizes elements horizontally or vertically along the block or inline axis.
  
  @param {string} content - Stack content (required)
  @param {string} direction - Stack direction: horizontal, vertical (default: vertical)
  @param {string} gap - Gap between items: none, xs, sm, md, lg, xl, 2xl (default: md)
  @param {string} align - Alignment: start, center, end, stretch (default: start)
  @param {string} justify - Justification: start, center, end, space-between, space-around (default: start)
  @param {boolean} wrap - Allow wrapping (default: false)
  @param {string} class - Additional CSS classes
  @param {string} attributes - Additional HTML attributes
  
  @example
  {% render 'component-structure-stack', content: 'Stack content', direction: 'vertical', gap: 'lg' %}
{% endcomment %}

{% liquid
  assign content = content | default: ''
  assign direction = direction | default: 'vertical'
  assign gap = gap | default: 'md'
  assign align = align | default: 'start'
  assign justify = justify | default: 'start'
  assign wrap = wrap | default: false
  assign class = class | default: ''
  assign attributes = attributes | default: ''
%}

<div 
  class="ds-stack ds-stack--{{ direction }} ds-stack--gap-{{ gap }} ds-stack--align-{{ align }} ds-stack--justify-{{ justify }} {% if wrap %}ds-stack--wrap{% endif %} {{ class }}"
  {{ attributes }}
>
  {{ content }}
</div>

{% stylesheet %}
  .ds-stack {
    display: flex;
  }
  
  .ds-stack--vertical {
    flex-direction: column;
  }
  
  .ds-stack--horizontal {
    flex-direction: row;
  }
  
  .ds-stack--gap-none { gap: 0; }
  .ds-stack--gap-xs { gap: var(--spacing-xs); }
  .ds-stack--gap-sm { gap: var(--spacing-sm); }
  .ds-stack--gap-md { gap: var(--spacing-md); }
  .ds-stack--gap-lg { gap: var(--spacing-lg); }
  .ds-stack--gap-xl { gap: var(--spacing-xl); }
  .ds-stack--gap-2xl { gap: var(--spacing-2xl); }
  
  .ds-stack--align-start { align-items: flex-start; }
  .ds-stack--align-center { align-items: center; }
  .ds-stack--align-end { align-items: flex-end; }
  .ds-stack--align-stretch { align-items: stretch; }
  
  .ds-stack--justify-start { justify-content: flex-start; }
  .ds-stack--justify-center { justify-content: center; }
  .ds-stack--justify-end { justify-content: flex-end; }
  .ds-stack--justify-space-between { justify-content: space-between; }
  .ds-stack--justify-space-around { justify-content: space-around; }
  
  .ds-stack--wrap {
    flex-wrap: wrap;
  }
{% endstylesheet %}

