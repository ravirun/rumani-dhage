{% comment %}
  Paragraph Component
  Displays a block of text and can contain inline elements such as buttons, links, or emphasized text.
  
  @param {string} text - Paragraph text (required)
  @param {string} size - Text size: sm, base, lg (default: base)
  @param {string} align - Text alignment: left, center, right, justify (default: left)
  @param {string} color - Text color: default, primary, secondary (default: default)
  @param {string} class - Additional CSS classes
  @param {string} attributes - Additional HTML attributes
  
  @example
  {% render 'component-titles-text-paragraph', text: 'This is a paragraph of text.', size: 'base' %}
{% endcomment %}

{% liquid
  assign text = text | default: ''
  assign size = size | default: 'base'
  assign align = align | default: 'left'
  assign color = color | default: 'default'
  assign class = class | default: ''
  assign attributes = attributes | default: ''
  
  unless text != blank
    echo '<!-- Error: text parameter required for paragraph component -->'
    break
  endunless
%}

<p 
  class="ds-paragraph ds-paragraph--{{ size }} ds-paragraph--align-{{ align }} ds-paragraph--color-{{ color }} {{ class }}"
  {{ attributes }}
>
  {{ text }}
</p>

{% stylesheet %}
  .ds-paragraph {
    margin: 0 0 var(--spacing-md) 0;
    font-family: var(--font-primary--family);
    font-size: var(--font-size-base);
    line-height: var(--line-height-body);
    color: var(--color-foreground);
  }
  
  .ds-paragraph:last-child {
    margin-bottom: 0;
  }
  
  .ds-paragraph--sm {
    font-size: var(--font-size-sm);
  }
  
  .ds-paragraph--base {
    font-size: var(--font-size-base);
  }
  
  .ds-paragraph--lg {
    font-size: var(--font-size-lg);
  }
  
  .ds-paragraph--align-left { text-align: left; }
  .ds-paragraph--align-center { text-align: center; }
  .ds-paragraph--align-right { text-align: right; }
  .ds-paragraph--align-justify { text-align: justify; }
  
  .ds-paragraph--color-default { color: var(--color-foreground); }
  .ds-paragraph--color-primary { color: var(--color-primary); }
  .ds-paragraph--color-secondary { color: var(--color-secondary-text); }
{% endstylesheet %}

