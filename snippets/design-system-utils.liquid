{% comment %}
  Design System Utilities
  Reusable utility classes and helpers based on design system tokens
  
  Usage: {% render 'design-system-utils' %}
  
  This snippet provides utility classes that reference design system CSS variables,
  making it easy to maintain consistent styling throughout the theme.
{% endcomment %}

{% style %}
  {% comment %} TYPOGRAPHY UTILITIES {% endcomment %}
  
  .ds-text-xs { font-size: var(--font-size-xs); }
  .ds-text-sm { font-size: var(--font-size-sm); }
  .ds-text-base { font-size: var(--font-size-base); }
  .ds-text-lg { font-size: var(--font-size-lg); }
  .ds-text-xl { font-size: var(--font-size-xl); }
  .ds-text-2xl { font-size: var(--font-size-2xl); }
  .ds-text-3xl { font-size: var(--font-size-3xl); }
  
  .ds-heading-1 { font-size: var(--font-size-3xl); line-height: var(--line-height-heading); font-weight: var(--font-primary--weight); }
  .ds-heading-2 { font-size: var(--font-size-2xl); line-height: var(--line-height-heading); font-weight: var(--font-primary--weight); }
  .ds-heading-3 { font-size: var(--font-size-xl); line-height: var(--line-height-heading); font-weight: var(--font-primary--weight); }
  .ds-heading-4 { font-size: var(--font-size-lg); line-height: var(--line-height-heading); font-weight: var(--font-primary--weight); }
  .ds-heading-5 { font-size: var(--font-size-base); line-height: var(--line-height-heading); font-weight: var(--font-primary--weight); }
  .ds-heading-6 { font-size: var(--font-size-sm); line-height: var(--line-height-heading); font-weight: var(--font-primary--weight); }
  
  .ds-body { font-size: var(--font-size-base); line-height: var(--line-height-body); }

  {% comment %} COLOR UTILITIES {% endcomment %}
  
  .ds-bg-primary { background-color: var(--color-primary); color: var(--color-primary-text); }
  .ds-bg-secondary { background-color: var(--color-secondary); color: var(--color-secondary-text); }
  .ds-bg-accent { background-color: var(--color-accent); }
  .ds-bg-success { background-color: var(--color-success); }
  .ds-bg-warning { background-color: var(--color-warning); }
  .ds-bg-error { background-color: var(--color-error); }
  
  .ds-text-primary { color: var(--color-primary); }
  .ds-text-secondary { color: var(--color-secondary-text); }
  .ds-text-accent { color: var(--color-accent); }
  .ds-text-success { color: var(--color-success); }
  .ds-text-warning { color: var(--color-warning); }
  .ds-text-error { color: var(--color-error); }
  .ds-text-foreground { color: var(--color-foreground); }
  
  .ds-border { border-color: var(--color-border); }
  .ds-border-primary { border-color: var(--color-primary); }
  .ds-border-divider { border-color: var(--color-divider); }

  {% comment %} SPACING UTILITIES {% endcomment %}
  
  .ds-p-xs { padding: var(--spacing-xs); }
  .ds-p-sm { padding: var(--spacing-sm); }
  .ds-p-md { padding: var(--spacing-md); }
  .ds-p-lg { padding: var(--spacing-lg); }
  .ds-p-xl { padding: var(--spacing-xl); }
  .ds-p-2xl { padding: var(--spacing-2xl); }
