  .ds-pt-xs { padding-top: var(--spacing-xs); }
  .ds-pt-sm { padding-top: var(--spacing-sm); }
  .ds-pt-md { padding-top: var(--spacing-md); }
  .ds-pt-lg { padding-top: var(--spacing-lg); }
  .ds-pt-xl { padding-top: var(--spacing-xl); }
  
  .ds-pb-xs { padding-bottom: var(--spacing-xs); }
  .ds-pb-sm { padding-bottom: var(--spacing-sm); }
  .ds-pb-md { padding-bottom: var(--spacing-md); }
  .ds-pb-lg { padding-bottom: var(--spacing-lg); }
  .ds-pb-xl { padding-bottom: var(--spacing-xl); }
  
  .ds-pl-xs { padding-left: var(--spacing-xs); }
  .ds-pl-sm { padding-left: var(--spacing-sm); }
  .ds-pl-md { padding-left: var(--spacing-md); }
  .ds-pl-lg { padding-left: var(--spacing-lg); }
  .ds-pl-xl { padding-left: var(--spacing-xl); }
  
  .ds-pr-xs { padding-right: var(--spacing-xs); }
  .ds-pr-sm { padding-right: var(--spacing-sm); }
  .ds-pr-md { padding-right: var(--spacing-md); }
  .ds-pr-lg { padding-right: var(--spacing-lg); }
  .ds-pr-xl { padding-right: var(--spacing-xl); }
  
  .ds-m-xs { margin: var(--spacing-xs); }
  .ds-m-sm { margin: var(--spacing-sm); }
  .ds-m-md { margin: var(--spacing-md); }
  .ds-m-lg { margin: var(--spacing-lg); }
  .ds-m-xl { margin: var(--spacing-xl); }
  .ds-m-2xl { margin: var(--spacing-2xl); }
  .ds-m-3xl { margin: var(--spacing-3xl); }
  
  .ds-mt-xs { margin-top: var(--spacing-xs); }
  .ds-mt-sm { margin-top: var(--spacing-sm); }
  .ds-mt-md { margin-top: var(--spacing-md); }
  .ds-mt-lg { margin-top: var(--spacing-lg); }
  .ds-mt-xl { margin-top: var(--spacing-xl); }
  
  .ds-mb-xs { margin-bottom: var(--spacing-xs); }
  .ds-mb-sm { margin-bottom: var(--spacing-sm); }
  .ds-mb-md { margin-bottom: var(--spacing-md); }
  .ds-mb-lg { margin-bottom: var(--spacing-lg); }
  .ds-mb-xl { margin-bottom: var(--spacing-xl); }
  
  .ds-ml-xs { margin-left: var(--spacing-xs); }
  .ds-ml-sm { margin-left: var(--spacing-sm); }
  .ds-ml-md { margin-left: var(--spacing-md); }
  .ds-ml-lg { margin-left: var(--spacing-lg); }
  .ds-ml-xl { margin-left: var(--spacing-xl); }
  
  .ds-mr-xs { margin-right: var(--spacing-xs); }
  .ds-mr-sm { margin-right: var(--spacing-sm); }
  .ds-mr-md { margin-right: var(--spacing-md); }
  .ds-mr-lg { margin-right: var(--spacing-lg); }
  .ds-mr-xl { margin-right: var(--spacing-xl); }
  
  .ds-gap-xs { gap: var(--spacing-xs); }
  .ds-gap-sm { gap: var(--spacing-sm); }
  .ds-gap-md { gap: var(--spacing-md); }
  .ds-gap-lg { gap: var(--spacing-lg); }
  .ds-gap-xl { gap: var(--spacing-xl); }

  {% comment %} BUTTON UTILITIES {% endcomment %}
  
  .ds-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--button-padding);
    border-radius: var(--button-border-radius);
    border-width: var(--button-border-width);
    font-family: var(--font-primary--family);
    font-weight: var(--font-primary--weight);
    text-decoration: none;
    cursor: pointer;
    transition: var(--transition);
    border-style: solid;
  }
  
  .ds-button--primary {
    background-color: var(--color-primary);
    color: var(--color-primary-text);
    border-color: var(--color-primary);
  }
  
  .ds-button--primary:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }
  
  .ds-button--secondary {
    background-color: var(--color-secondary);
    color: var(--color-secondary-text);
    border-color: var(--color-border);
  }
  
  .ds-button--outline {
    background-color: transparent;
    color: var(--color-primary);
    border-color: var(--color-primary);
  }
  
  .ds-button--outline:hover {
    background-color: var(--color-primary);
    color: var(--color-primary-text);
  }
  
  .ds-button--ghost {
    background-color: transparent;
    color: var(--color-primary);
    border-color: transparent;
  }
  
  .ds-button--ghost:hover {
    background-color: color-mix(in srgb, var(--color-primary) 10%, transparent);
  }

  {% comment %} CARD UTILITIES {% endcomment %}
  
  .ds-card {
    background-color: var(--color-background);
    border-radius: var(--card-border-radius);
    padding: var(--card-padding);
    border-width: var(--card-border-width);
    border-style: solid;
    border-color: var(--color-border);
    {% if settings.card_shadow_enabled %}
      box-shadow: var(--shadow);
    {% endif %}
    transition: var(--transition);
  }
  
  .ds-card:hover {
    {% if settings.card_shadow_enabled %}
      box-shadow: var(--shadow-offset-x) calc(var(--shadow-offset-y) + 2px) calc(var(--shadow-blur) + 2px) var(--shadow-spread) var(--shadow-color);
    {% endif %}
  }

  {% comment %} INPUT UTILITIES {% endcomment %}
  
  .ds-input {
    width: 100%;
    padding: var(--input-padding);
    border-radius: var(--input-border-radius);
    border-width: var(--input-border-width);
    border-style: solid;
    border-color: var(--color-border);
    background-color: var(--color-background);
    color: var(--color-foreground);
    font-family: var(--font-primary--family);
    font-size: var(--font-size-base);
    transition: var(--transition);
  }
  
  .ds-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-primary) 20%, transparent);
  }
  
  .ds-input::placeholder {
    color: color-mix(in srgb, var(--color-foreground) 50%, transparent);
  }

  {% comment %} TRANSITION UTILITIES {% endcomment %}
  
  .ds-transition { transition: var(--transition); }
  .ds-transition-fast { transition: all calc(var(--transition-duration) * 0.5) var(--transition-easing); }
  .ds-transition-slow { transition: all calc(var(--transition-duration) * 2) var(--transition-easing); }

  {% comment %} BORDER UTILITIES {% endcomment %}
  
  .ds-rounded { border-radius: var(--button-border-radius); }
  .ds-rounded-sm { border-radius: calc(var(--button-border-radius) * 0.5); }
  .ds-rounded-lg { border-radius: calc(var(--button-border-radius) * 1.5); }
  .ds-rounded-full { border-radius: 9999px; }
  
  .ds-border { border-width: 1px; border-style: solid; border-color: var(--color-border); }
  .ds-border-t { border-top-width: 1px; border-top-style: solid; border-top-color: var(--color-border); }
  .ds-border-b { border-bottom-width: 1px; border-bottom-style: solid; border-bottom-color: var(--color-border); }
  .ds-border-l { border-left-width: 1px; border-left-style: solid; border-left-color: var(--color-border); }
  .ds-border-r { border-right-width: 1px; border-right-style: solid; border-right-color: var(--color-border); }

  {% comment %} SHADOW UTILITIES {% endcomment %}
  
  .ds-shadow { box-shadow: var(--shadow); }
  .ds-shadow-sm { box-shadow: calc(var(--shadow-offset-x) * 0.5) calc(var(--shadow-offset-y) * 0.5) calc(var(--shadow-blur) * 0.5) var(--shadow-spread) var(--shadow-color); }
  .ds-shadow-lg { box-shadow: calc(var(--shadow-offset-x) * 1.5) calc(var(--shadow-offset-y) * 1.5) calc(var(--shadow-blur) * 1.5) var(--shadow-spread) var(--shadow-color); }
  .ds-shadow-none { box-shadow: none; }
{% endstyle %}

