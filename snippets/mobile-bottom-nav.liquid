<div class="mobile-bottom-nav color-background-1 gradient">
  <a
    href="{{ routes.root_url }}"
    class="mobile-bottom-nav__item {% if request.path == routes.root_url %}is-active{% endif %}"
    title="Home"
  >
    <svg class="mobile-bottom-nav__icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M3 9.5L12 2.5L21 9.5V20.5C21 21.0523 20.5523 21.5 20 21.5H15V15.5H9V21.5H4C3.44772 21.5 3 21.0523 3 20.5V9.5Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <span class="mobile-bottom-nav__label">Home</span>
  </a>

  <a
    href="{{ routes.search_url }}"
    class="mobile-bottom-nav__item {% if request.path == routes.search_url %}is-active{% endif %}"
    title="{{ 'general.search.search' | t }}"
  >
    <svg class="mobile-bottom-nav__icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="11" cy="11" r="7" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M20 20L17 17" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <span class="mobile-bottom-nav__label">{{ 'general.search.search' | t }}</span>
  </a>

  <a
    href="{{ routes.all_products_collection_url }}"
    class="mobile-bottom-nav__item {% if request.path == routes.all_products_collection_url %}is-active{% endif %}"
    title="Collections"
  >
    <svg class="mobile-bottom-nav__icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M4 4H10V10H4V4Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M4 14H10V20H4V14Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M14 4H20V10H14V4Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M14 14H20V20H14V14Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <span class="mobile-bottom-nav__label">Collections</span>
  </a>

  <a
    href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}"
    class="mobile-bottom-nav__item {% if request.path contains routes.account_url %}is-active{% endif %}"
    title="{% if customer %}{{ 'customer.account.title' | t }}{% else %}{{ 'customer.log_in' | t }}{% endif %}"
  >
    <svg class="mobile-bottom-nav__icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 5.17157 16.1716C4.42143 16.9217 4 17.9391 4 19V21" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <span class="mobile-bottom-nav__label">
      {%- if customer %}Account{% else %}Login{% endif -%}
    </span>
  </a>
</div>
