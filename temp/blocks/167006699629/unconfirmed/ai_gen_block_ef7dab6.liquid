{% doc %}
  @prompt
    Create a countdown timer badge for a saree launch on the password page. The countdown should be elegant and match traditional Indian ethnic wear branding, with customizable end date and time, and display days, hours, minutes, and seconds remaining until the launch.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-countdown-badge-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 30px 20px;
    background: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .ai-countdown-badge__header-{{ ai_gen_id }} {
    margin-bottom: 20px;
  }

  .ai-countdown-badge__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 8px 0;
    letter-spacing: 1px;
  }

  .ai-countdown-badge__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    font-style: italic;
  }

  .ai-countdown-badge__timer-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: {{ block.settings.timer_gap }}px;
    flex-wrap: wrap;
    margin-top: 20px;
  }

  .ai-countdown-badge__unit-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: {{ block.settings.unit_width }}px;
    padding: {{ block.settings.unit_padding }}px;
    background: {{ block.settings.unit_background }};
    border-radius: {{ block.settings.unit_border_radius }}px;
    border: {{ block.settings.unit_border_width }}px solid {{ block.settings.unit_border_color }};
  }

  .ai-countdown-badge__number-{{ ai_gen_id }} {
    font-family: {{ block.settings.number_font.family }}, {{ block.settings.number_font.fallback_families }};
    font-weight: {{ block.settings.number_font.weight }};
    font-size: {{ block.settings.number_size }}px;
    color: {{ block.settings.number_color }};
    line-height: 1;
    margin-bottom: 8px;
  }

  .ai-countdown-badge__label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.label_color }};
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 500;
  }

  .ai-countdown-badge__divider-{{ ai_gen_id }} {
    width: 60px;
    height: 2px;
    background: {{ block.settings.divider_color }};
    margin: 20px auto;
    opacity: 0.3;
  }

  .ai-countdown-badge__message-{{ ai_gen_id }} {
    font-size: {{ block.settings.message_size }}px;
    color: {{ block.settings.message_color }};
    margin-top: 20px;
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  .ai-countdown-badge__expired-{{ ai_gen_id }} {
    display: none;
    font-size: {{ block.settings.expired_size }}px;
    color: {{ block.settings.expired_color }};
    font-weight: 600;
    padding: 20px;
  }

  .ai-countdown-badge__expired-{{ ai_gen_id }}.active {
    display: block;
  }

  @media screen and (max-width: 749px) {
    .ai-countdown-badge-{{ ai_gen_id }} {
      padding: 20px 15px;
    }

    .ai-countdown-badge__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-countdown-badge__timer-{{ ai_gen_id }} {
      gap: {{ block.settings.timer_gap | times: 0.7 }}px;
    }

    .ai-countdown-badge__unit-{{ ai_gen_id }} {
      min-width: calc({{ block.settings.unit_width }}px * 0.8);
      padding: calc({{ block.settings.unit_padding }}px * 0.8);
    }

    .ai-countdown-badge__number-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.number_size }}px * 0.75);
    }

    .ai-countdown-badge__label-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.label_size }}px * 0.85);
    }
  }
{% endstyle %}

<countdown-timer-{{ ai_gen_id }}
  class="ai-countdown-badge-{{ ai_gen_id }}"
  data-end-date="{{ block.settings.end_date }}"
  data-end-time="{{ block.settings.end_time }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-countdown-badge__header-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-countdown-badge__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}
    {% if block.settings.subtitle != blank %}
      <p class="ai-countdown-badge__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    {% endif %}
  </div>

  {% if block.settings.show_divider %}
    <div class="ai-countdown-badge__divider-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-countdown-badge__timer-{{ ai_gen_id }}">
    <div class="ai-countdown-badge__unit-{{ ai_gen_id }}">
      <span class="ai-countdown-badge__number-{{ ai_gen_id }}" data-days>00</span>
      <span class="ai-countdown-badge__label-{{ ai_gen_id }}">{{ block.settings.days_label }}</span>
    </div>
    <div class="ai-countdown-badge__unit-{{ ai_gen_id }}">
      <span class="ai-countdown-badge__number-{{ ai_gen_id }}" data-hours>00</span>
      <span class="ai-countdown-badge__label-{{ ai_gen_id }}">{{ block.settings.hours_label }}</span>
    </div>
    <div class="ai-countdown-badge__unit-{{ ai_gen_id }}">
      <span class="ai-countdown-badge__number-{{ ai_gen_id }}" data-minutes>00</span>
      <span class="ai-countdown-badge__label-{{ ai_gen_id }}">{{ block.settings.minutes_label }}</span>
    </div>
    <div class="ai-countdown-badge__unit-{{ ai_gen_id }}">
      <span class="ai-countdown-badge__number-{{ ai_gen_id }}" data-seconds>00</span>
      <span class="ai-countdown-badge__label-{{ ai_gen_id }}">{{ block.settings.seconds_label }}</span>
    </div>
  </div>

  {% if block.settings.message != blank %}
    <div class="ai-countdown-badge__message-{{ ai_gen_id }}">{{ block.settings.message }}</div>
  {% endif %}

  <div class="ai-countdown-badge__expired-{{ ai_gen_id }}">
    {{ block.settings.expired_message }}
  </div>
</countdown-timer-{{ ai_gen_id }}>

<script>
  (function() {
    class CountdownTimer{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.endDate = this.dataset.endDate;
        this.endTime = this.dataset.endTime;
        this.daysEl = this.querySelector('[data-days]');
        this.hoursEl = this.querySelector('[data-hours]');
        this.minutesEl = this.querySelector('[data-minutes]');
        this.secondsEl = this.querySelector('[data-seconds]');
        this.timerEl = this.querySelector('.ai-countdown-badge__timer-{{ ai_gen_id }}');
        this.expiredEl = this.querySelector('.ai-countdown-badge__expired-{{ ai_gen_id }}');
        this.messageEl = this.querySelector('.ai-countdown-badge__message-{{ ai_gen_id }}');
        this.interval = null;
      }

      connectedCallback() {
        if (!this.endDate || !this.endTime) {
          return;
        }
        this.startCountdown();
      }

      disconnectedCallback() {
        if (this.interval) {
          clearInterval(this.interval);
        }
      }

      startCountdown() {
        this.updateCountdown();
        this.interval = setInterval(() => {
          this.updateCountdown();
        }, 1000);
      }

      updateCountdown() {
        const endDateTime = new Date(this.endDate + 'T' + this.endTime).getTime();
        const now = new Date().getTime();
        const distance = endDateTime - now;

        if (distance < 0) {
          clearInterval(this.interval);
          this.showExpired();
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        this.daysEl.textContent = String(days).padStart(2, '0');
        this.hoursEl.textContent = String(hours).padStart(2, '0');
        this.minutesEl.textContent = String(minutes).padStart(2, '0');
        this.secondsEl.textContent = String(seconds).padStart(2, '0');
      }

      showExpired() {
        if (this.timerEl) {
          this.timerEl.style.display = 'none';
        }
        if (this.messageEl) {
          this.messageEl.style.display = 'none';
        }
        if (this.expiredEl) {
          this.expiredEl.classList.add('active');
        }
      }
    }

    customElements.define('countdown-timer-{{ ai_gen_id }}', CountdownTimer{{ ai_gen_id }});
  })();
</script>

