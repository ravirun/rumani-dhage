    },
    "rich_product_details_main": {
      "type": "rich-product-details",
      "settings": {
        "color_scheme": ""
      }
    },
    "highlight_shipping_banner_global": {
      "type": "highlight-shipping-banner",
      "settings": {
        "color_scheme": "",
        "text_content": "Free Shipping on all domestic orders above 1,999 INR",
        "subtext": "Hand-packed with care in sustainable packaging."
      }
    },
    "product_offer_widget_main": {
      "type": "product-offer-widget",
      "settings": {
        "shipping_threshold": 2000,
        "sub_discount": 15
      }
    },
    "image-with-text": {
      "type": "image-with-text",
      "blocks": {
        "image-with-text-0": {
          "type": "heading",
          "settings": {
            "heading": "Crafted Over 18 Days",
            "heading_size": "h1"
          }
        },
        "image-with-text-1": {
          "type": "text",
          "settings": {
            "text": "<p>Every warp and weft is hand-positioned by master weavers. A single saree represents 18-25 days of dedicated craftsmanship on traditional pit looms, preserving an art form passed down through generations.</p>",
            "text_style": "body"
          }
        }
      },
      "block_order": [
        "image-with-text-0",
        "image-with-text-1"
      ],
      "settings": {
        "height": "small",
        "desktop_image_width": "medium",
        "layout": "text_first",
        "image_behavior": "none",
        "content_layout": "no-overlap",
        "desktop_content_position": "top",
        "desktop_content_alignment": "left",
        "mobile_content_alignment": "left",
        "section_color_scheme": "",
        "color_scheme": "scheme-2",
        "padding_top": 36,
        "padding_bottom": 36
      }
    },
    "multicolumn": {
      "type": "multicolumn",
      "blocks": {
        "column-0": {
          "type": "column",
          "settings": {
            "title": "Handwoven Heritage",
            "text": "<p>Woven on traditional pit looms in Varanasi by master artisans.</p>",
            "link_label": "",
            "link": ""
          }
        },
        "column-1": {
          "type": "column",
          "settings": {
            "title": "Silk Mark Certified",
            "text": "<p>Authentic pure silk certified under Silk Mark standards.</p>",
            "link_label": "",
            "link": ""
          }
        },
        "column-2": {
          "type": "column",
          "settings": {
            "title": "Limited Batch Production",
            "text": "<p>Each saree is produced in small artisan batches.</p>",
            "link_label": "",
            "link": ""
          }
        },
        "column-3": {
          "type": "column",
          "settings": {
            "title": "Secure Global Shipping",
            "text": "<p>Express delivery with full insurance protection.</p>",
            "link_label": "",
            "link": ""
          }
        }
      },
      "block_order": [
        "column-0",
        "column-1",
        "column-2",
        "column-3"
      ],
      "settings": {
        "title": "",
        "heading_size": "h1",
        "image_width": "full",
        "image_ratio": "adapt",
        "button_label": "",
        "button_link": "",
        "columns_desktop": 4,
        "column_alignment": "left",
        "background_style": "none",
        "color_scheme": "scheme-1",
        "columns_mobile": "1",
        "swipe_on_mobile": false,
